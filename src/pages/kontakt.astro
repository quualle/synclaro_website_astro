---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Kontakt - Synclaro" description="Kontaktieren Sie Synclaro für KI-Beratung, Automatisierung und Implementierung. Rufen Sie uns an oder schreiben Sie uns eine E-Mail.">

  <!-- Hero Section - Direkter, persönlicher -->
  <section class="py-16 md:py-24 px-4 md:px-8 bg-white">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-6 flex items-center justify-center gap-3">
        <div class="w-3 h-3 bg-swiss-orange animate-pulse rounded-full"></div>
        <span class="font-mono text-xs sm:text-sm tracking-widest uppercase text-gray-500">Synclaro Kontakt</span>
      </div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 leading-tight">
        Einfach <span class="text-swiss-orange">anrufen</span> oder <span class="text-swiss-orange">schreiben</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto">
        Keine Warteschleifen, keine Formulare, kein Schnickschnack. Direkt mit Marco sprechen.
      </p>
    </div>
  </section>

  <!-- PRIMÄRER KONTAKT: Telefon & E-Mail - Hero-Style, maximale Aufmerksamkeit -->
  <section class="py-12 px-4 md:px-8 bg-black text-white">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8">

        <!-- Telefon - Der schnellste Weg -->
        <a href="tel:+4916099471052" class="group block bg-white/5 border border-white/20 p-8 md:p-10 hover:bg-swiss-orange hover:border-swiss-orange transition-all duration-300 rounded-lg">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 bg-swiss-orange group-hover:bg-white rounded-full flex items-center justify-center transition-colors duration-300">
              <svg class="w-8 h-8 text-white group-hover:text-swiss-orange transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400 group-hover:text-white/80 transition-colors">Der schnellste Weg</p>
              <p class="text-2xl md:text-3xl font-black group-hover:text-white transition-colors">Anrufen</p>
            </div>
          </div>
          <p class="text-3xl md:text-4xl font-black text-swiss-orange group-hover:text-white transition-colors mb-4">
            0160 9947 1052
          </p>
          <p class="text-gray-400 group-hover:text-white/80 transition-colors">
            Mo-Fr 9-18 Uhr • Oft auch abends erreichbar
          </p>
          <div class="mt-6 flex items-center gap-2 text-swiss-orange group-hover:text-white font-bold transition-colors">
            <span>Jetzt anrufen</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </a>

        <!-- E-Mail - Für ausführliche Anfragen -->
        <a href="mailto:marcoheer@synclaro.de" class="group block bg-white/5 border border-white/20 p-8 md:p-10 hover:bg-swiss-orange hover:border-swiss-orange transition-all duration-300 rounded-lg">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 bg-swiss-orange group-hover:bg-white rounded-full flex items-center justify-center transition-colors duration-300">
              <svg class="w-8 h-8 text-white group-hover:text-swiss-orange transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400 group-hover:text-white/80 transition-colors">Für ausführliche Anfragen</p>
              <p class="text-2xl md:text-3xl font-black group-hover:text-white transition-colors">E-Mail</p>
            </div>
          </div>
          <p class="text-2xl md:text-3xl font-black text-swiss-orange group-hover:text-white transition-colors mb-4 break-all">
            marcoheer@synclaro.de
          </p>
          <p class="text-gray-400 group-hover:text-white/80 transition-colors">
            Antwort meist innerhalb weniger Stunden
          </p>
          <div class="mt-6 flex items-center gap-2 text-swiss-orange group-hover:text-white font-bold transition-colors">
            <span>E-Mail schreiben</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </a>

      </div>

      <!-- Persönliche Note -->
      <div class="mt-12 text-center">
        <div class="inline-flex items-center gap-4 bg-white/5 border border-white/10 px-6 py-4 rounded-lg">
          <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-swiss-orange">
            <img src="/images/Executive-3.webp" alt="Marco Heer" class="w-full h-full object-cover" />
          </div>
          <p class="text-gray-300 text-left">
            <span class="text-white font-bold">Marco Heer</span> nimmt sich persönlich Zeit für Ihr Anliegen.<br/>
            <span class="text-sm text-gray-400">Kein Callcenter, kein Vertrieb – direkt der Experte.</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Warum direkt anrufen? -->
  <section class="py-16 px-4 md:px-8 bg-gray-50">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-black text-center mb-12">
        Warum der <span class="text-swiss-orange">direkte Draht</span> am besten funktioniert
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <div class="w-12 h-12 bg-swiss-orange/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Sofortige Klarheit</h3>
          <p class="text-gray-600 text-sm">In 5 Minuten am Telefon klären wir mehr als in 10 E-Mails. Sie bekommen direkt Antworten.</p>
        </div>
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <div class="w-12 h-12 bg-swiss-orange/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Persönlich & ehrlich</h3>
          <p class="text-gray-600 text-sm">Keine Verkaufsgespräche. Wenn KI für Sie keinen Sinn macht, sage ich Ihnen das direkt.</p>
        </div>
        <div class="bg-white p-6 rounded-lg border border-gray-200">
          <div class="w-12 h-12 bg-swiss-orange/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Keine Wartezeit</h3>
          <p class="text-gray-600 text-sm">Kein Termin nötig für ein erstes Gespräch. Einfach anrufen – wenn ich dran bin, bin ich dran.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SEKUNDÄRE OPTIONEN: Video-Call & Kontaktformular -->
  <section class="py-16 px-4 md:px-8 bg-white">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-10">
        <p class="text-gray-500 text-sm uppercase tracking-wider mb-2">Alternative Kontaktwege</p>
        <h2 class="text-xl md:text-2xl font-bold text-gray-700">
          Falls Sie lieber einen festen Termin möchten
        </h2>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">

        <!-- Video-Call Option - Dezenter gestaltet -->
        <div class="bg-gray-50 p-6 md:p-8 rounded-lg border border-gray-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg">Video-Call buchen</h3>
              <p class="text-sm text-gray-500">15-30 Minuten, kostenfrei</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-6">
            Sie möchten einen festen Termin im Kalender? Kein Problem – buchen Sie ein kurzes Erstgespräch per Video.
          </p>
          <a
            href="https://cal.com/marcoheer/erstgesprach"
            class="inline-flex items-center gap-2 text-gray-700 font-medium hover:text-swiss-orange transition-colors border border-gray-300 hover:border-swiss-orange px-4 py-2 rounded-lg"
          >
            <span>Termin auswählen</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Kontaktformular - Kompakt -->
        <div class="bg-gray-50 p-6 md:p-8 rounded-lg border border-gray-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg">Nachricht hinterlassen</h3>
              <p class="text-sm text-gray-500">Wir melden uns zeitnah</p>
            </div>
          </div>

          <form id="contact-form" class="space-y-3">
            <input
              type="text"
              name="name"
              required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-swiss-orange focus:outline-none transition-colors"
              placeholder="Ihr Name"
            >
            <input
              type="email"
              name="email"
              required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-swiss-orange focus:outline-none transition-colors"
              placeholder="Ihre E-Mail"
            >
            <textarea
              name="message"
              required
              rows="2"
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-swiss-orange focus:outline-none transition-colors resize-none"
              placeholder="Kurze Nachricht (optional: Telefonnummer für Rückruf)"
            ></textarea>
            <button
              type="submit"
              class="w-full bg-gray-800 text-white px-4 py-2 text-sm font-medium rounded-lg hover:bg-swiss-orange transition-colors duration-300"
            >
              Absenden
            </button>
          </form>

          <div id="form-success" class="hidden mt-3 p-3 bg-green-100 border border-green-300 text-green-700 text-sm rounded-lg text-center">
            Danke! Wir melden uns schnellstmöglich.
          </div>
          <div id="form-error" class="hidden mt-3 p-3 bg-red-100 border border-red-300 text-red-700 text-sm rounded-lg text-center">
            Fehler aufgetreten. Bitte direkt anrufen oder mailen.
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Standort & LinkedIn -->
  <section class="py-12 px-4 md:px-8 bg-gray-50 border-t border-gray-200">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row justify-center items-center gap-8 text-center md:text-left">
        <div>
          <p class="text-sm text-gray-500 mb-1">Standort</p>
          <p class="font-bold">Deining, Bayern</p>
          <p class="text-sm text-gray-500">Deutschlandweit tätig</p>
        </div>
        <div class="hidden md:block w-px h-12 bg-gray-300"></div>
        <a href="https://www.linkedin.com/in/marco-heer-9b34b91a3/" target="_blank" rel="noopener noreferrer" class="group flex items-center gap-3 hover:text-swiss-orange transition-colors">
          <div class="w-10 h-10 bg-gray-200 group-hover:bg-swiss-orange rounded-lg flex items-center justify-center transition-colors">
            <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-500">LinkedIn</p>
            <p class="font-bold">Marco Heer</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form');
    const successMsg = document.getElementById('form-success');
    const errorMsg = document.getElementById('form-error');
    const submitButton = form?.querySelector('button[type="submit"]');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (submitButton) {
        submitButton.setAttribute('disabled', 'true');
        submitButton.textContent = 'Wird gesendet...';
      }

      const formData = new FormData(form as HTMLFormElement);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        message: formData.get('message'),
        from_page: window.location.pathname,
        campaign: 'kontakt'
      };

      try {
        const response = await fetch('/api/leads', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          successMsg?.classList.remove('hidden');
          errorMsg?.classList.add('hidden');
          (form as HTMLFormElement).reset();
        } else {
          throw new Error('Server error');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        errorMsg?.classList.remove('hidden');
        successMsg?.classList.add('hidden');
      } finally {
        if (submitButton) {
          submitButton.removeAttribute('disabled');
          submitButton.textContent = 'Absenden';
        }
      }
    });
  </script>

</MainLayout>
