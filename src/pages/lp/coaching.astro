        </div>
      </div>
    </div>
  </section>

  <!-- SKILLS -->
  <section id="ablauf" class="py-10 md:py-14 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-8">
        <div class="accent-line mx-auto mb-4"></div>
        <h2 class="text-2xl md:text-3xl font-black tracking-tight">Was du in 6 Monaten <span class="gradient-text">lernst</span></h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3">
        {skills.map((skill, i) => (
          <div class="bg-white p-4 rounded-xl border border-gray-200 text-center card-hover group">
            <div class="w-12 h-12 mx-auto rounded-xl bg-gradient-to-br from-gray-100 to-gray-50 flex items-center justify-center mb-3 group-hover:from-orange-500/10 group-hover:to-orange-500/5 transition-colors">
              <span class="text-2xl font-black text-gray-300 group-hover:text-orange-500 transition-colors">{String(i + 1).padStart(2, '0')}</span>
            </div>
            <h3 class="font-bold text-sm text-gray-900">{skill.title}</h3>
            <p class="text-xs text-gray-500 mt-1">{skill.desc}</p>
          </div>
