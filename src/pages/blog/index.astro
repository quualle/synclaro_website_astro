---
import MainLayout from '../../layouts/MainLayout.astro';
import { createClient } from '@supabase/supabase-js';

// Initialize Supabase client
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || 'https://ouqhysemcldamthpuqqq.supabase.co';
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im91cWh5c2VtY2xkYW10aHB1cXFxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTQwNzIxNTIsImV4cCI6MjA2OTY0ODE1Mn0.m7iBYedWpj2ZTgO0uS1F8920uDCpYoyKzbjjNnhiK68';

const supabase = createClient(supabaseUrl, supabaseAnonKey);

// Supabase Storage URL for blog images
const storageUrl = 'https://ouqhysemcldamthpuqqq.supabase.co/storage/v1/object/public/blog-images';

// Fetch published blog articles
let articles: any[] = [];
let error = null;
let showComingSoon = false;

try {
  const { data, error: fetchError } = await supabase
    .from('articles')
    .select('*')
    .eq('status', 'published')
    .order('published_at', { ascending: false })
    .limit(12);

  if (fetchError) {
    console.error('Supabase error:', fetchError);
    if (fetchError.message.includes('does not exist') || fetchError.code === '42P01') {
      showComingSoon = true;
    } else {
      error = fetchError.message;
    }
  } else {
    articles = data || [];
  }
} catch (e) {
  console.error('Error fetching articles:', e);
  showComingSoon = true;
}

// Helper function to format date
function formatDate(dateString: string | null) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Helper function to get blog image URL
function getBlogImageUrl(slug: string) {
  return `${storageUrl}/${slug}.webp`;
}
---

<MainLayout title="Blog - KI-Insights und Automatisierungs-Tipps | Synclaro">
  <section class="relative py-16 sm:py-32 px-4 sm:px-6 lg:px-12 min-h-screen">
    <!-- Dark gradient background -->
    <div class="absolute inset-0 bg-gradient-to-b from-dark-900 via-dark-800 to-dark-900"></div>

    <!-- Background blur elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 right-1/4 w-64 md:w-96 h-64 md:h-96 bg-neon-purple/5 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-64 md:w-96 h-64 md:h-96 bg-electric-cyan/5 rounded-full filter blur-3xl"></div>
    </div>

    <div class="relative z-10 container mx-auto max-w-7xl">
      <!-- Header -->
      <div class="text-center mb-12 sm:mb-16 animate-fade-in">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-4 sm:mb-6 text-white">
          KI-Insights & <span class="gradient-text">Automatisierungs-Tipps</span>
        </h1>
        <p class="text-base sm:text-lg lg:text-xl text-gray-400 max-w-3xl mx-auto">
          Entdecken Sie wertvolle Einblicke zur KI-Integration, Workflow-Automatisierung und digitalen Transformation f√ºr Ihr Unternehmen.
        </p>
      </div>

      <!-- Error State -->
      {error && (
        <div class="text-center py-12">
          <p class="text-red-400">Fehler beim Laden der Artikel: {error}</p>
        </div>
      )}

      <!-- Coming Soon State -->
      {showComingSoon && (
        <div class="text-center py-16 bg-dark-800/80 backdrop-blur-lg border border-white/10 rounded-2xl p-8">
          <div class="w-20 h-20 bg-neon-purple rounded-xl mx-auto mb-6 flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Blog kommt bald!</h3>
          <p class="text-gray-400 text-lg mb-6 max-w-lg mx-auto">
            Wir arbeiten gerade an spannenden Inhalten rund um KI, Automatisierung und digitale Transformation.
          </p>
          <a
            href="/kontakt"
            class="inline-block px-6 py-3 bg-neon-purple hover:bg-electric-violet text-white font-medium rounded-lg transition-colors"
          >
            Benachrichtigt werden
          </a>
        </div>
      )}

      <!-- Empty State -->
      {!error && !showComingSoon && articles.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-400 text-lg">Keine Artikel gefunden.</p>
        </div>
      )}

      <!-- Articles Grid -->
      {!error && !showComingSoon && articles.length > 0 && (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {articles.map((article, index) => (
            <article class="group" style={`animation-delay: ${index * 100}ms`}>
              <a href={`/blog/${article.slug}`}>
                <div class="relative h-full">
                  <!-- Hover glow effect -->
                  <div class="absolute -inset-0.5 bg-gradient-to-r from-neon-purple/0 to-electric-cyan/0 group-hover:from-neon-purple/20 group-hover:to-electric-cyan/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-500"></div>

                  <div class="relative h-full bg-dark-800/80 backdrop-blur-lg border border-white/10 rounded-2xl overflow-hidden hover:border-white/20 transition-all group-hover:scale-[1.02] flex flex-col">
                    <!-- Featured Image -->
                    <div class="w-full h-48 bg-dark-700 overflow-hidden">
                      <img
                        src={getBlogImageUrl(article.slug)}
                        alt={article.title}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        onerror="this.style.display='none'"
                      />
                    </div>

                    <div class="p-6 flex flex-col flex-grow">
                      <!-- Article meta -->
                      <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          <span>{formatDate(article.published_at || article.created_at)}</span>
                        </div>
                        <div class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          <span>{article.reading_time} Min.</span>
                        </div>
                      </div>

                      <!-- Title -->
                      <h2 class="text-xl font-bold text-white mb-3 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-neon-purple group-hover:to-electric-cyan transition-all line-clamp-2">
                        {article.title}
                      </h2>

                      <!-- Excerpt -->
                      <p class="text-gray-300 mb-4 line-clamp-3 flex-grow">
                        {article.meta_description}
                      </p>

                      <!-- Tags -->
                      {article.tags && article.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-6">
                          {article.tags.slice(0, 3).map((tag: string) => (
                            <span class="px-2 py-1 bg-white/5 text-xs text-gray-400 rounded-full">
                              {tag}
                            </span>
                          ))}
                        </div>
                      )}

                      <!-- Read more -->
                      <div class="flex items-center text-neon-purple group-hover:text-electric-cyan transition-colors mt-auto">
                        <span class="font-medium">Artikel lesen</span>
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</MainLayout>

<style>
  .gradient-text {
    background: linear-gradient(135deg, #a855f7, #06b6d4);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
  }
</style>
