              <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
              <span>Keine Zeit fürs Lernen</span>
            </li>
          </ul>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <p class="text-xs text-gray-500">Geschäftsführer? <a href="/lp/mastermind" class="text-orange-500 hover:underline font-medium">Executive Mastermind →</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="py-10 md:py-14 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-8">
        <div class="accent-line mx-auto mb-4"></div>
        <h2 class="text-2xl md:text-3xl font-black tracking-tight">Was Teilnehmer <span class="gradient-text">sagen</span></h2>
      </div>

      <div class="flex md:grid md:grid-cols-3 gap-4 overflow-x-auto pb-4 md:pb-0 scroll-horizontal snap-x snap-mandatory">
        {testimonials.map((t) => (
          <div class="min-w-[300px] md:min-w-0 bg-gray-50 p-5 rounded-2xl border border-gray-100 snap-start">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg shadow-orange-500/25">
                {t.initials}
              </div>
              <div>
                <div class="font-bold text-gray-900">{t.name}</div>
                <div class="text-xs text-gray-500">{t.role}</div>
              </div>
            </div>
            <p class="text-gray-600 leading-relaxed">"{t.quote}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- COACH -->
  <section class="py-10 md:py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-8 items-center bg-white p-6 md:p-8 rounded-2xl border border-gray-200">
        <div class="w-32 h-32 md:w-40 md:h-40 flex-shrink-0 relative">
          <div class="absolute inset-0 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full blur-lg opacity-30"></div>
          <img src="/images/marco_compressed.jpg" alt="Marco Heer" class="relative w-full h-full object-cover rounded-full ring-4 ring-white shadow-xl" />
        </div>
        <div class="text-center md:text-left">
          <div class="inline-block text-xs text-orange-500 font-semibold uppercase tracking-wider mb-2 bg-orange-500/10 px-3 py-1 rounded-full">Dein Coach</div>
          <h2 class="text-2xl md:text-3xl font-black tracking-tight mb-3">Marco Heer</h2>
          <p class="text-gray-600 mb-4 leading-relaxed">
