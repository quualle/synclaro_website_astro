---
import MainLayout from '../../layouts/MainLayout.astro';
import { createClient } from '@supabase/supabase-js';
import { marked } from 'marked';

// Initialize Supabase client
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || 'https://ouqhysemcldamthpuqqq.supabase.co';
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im91cWh5c2VtY2xkYW10aHB1cXFxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzUyMjk5MjEsImV4cCI6MjA1MDgwNTkyMX0.xR8KGGKWH2JLdo6k3HK-kK3G1TrmXHLrfZjJkeKMFig';

const supabase = createClient(supabaseUrl, supabaseAnonKey);

// Supabase Storage URL for blog images
const storageUrl = 'https://ouqhysemcldamthpuqqq.supabase.co/storage/v1/object/public/blog-images';

// Get slug from URL
const { slug } = Astro.params;

// Fetch article by slug
let article: any = null;
let error = null;

try {
  const { data, error: fetchError } = await supabase
    .from('articles')
    .select('*')
    .eq('slug', slug)
    .eq('status', 'published')
    .single();

  if (fetchError) {
    if (fetchError.code === 'PGRST116') {
      return Astro.redirect('/blog');
    }
    console.error('Supabase error:', fetchError);
    error = fetchError.message;
  } else {
    article = data;
  }
} catch (e) {
  console.error('Error fetching article:', e);
  error = 'Fehler beim Laden des Artikels';
}

if (!article && !error) {
  return Astro.redirect('/blog');
}

// Helper function to format date
function formatDate(dateString: string | null) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get blog image URL
function getBlogImageUrl(articleSlug: string) {
  return `${storageUrl}/${articleSlug}.webp`;
}

// Get related articles
let relatedArticles: any[] = [];
if (article) {
  try {
    const { data: related } = await supabase
      .from('articles')
      .select('id, title, slug, meta_description, published_at, reading_time, tags')
      .eq('status', 'published')
      .neq('id', article.id)
      .limit(3);

    relatedArticles = related || [];
  } catch (e) {
    console.error('Error fetching related articles:', e);
  }
}

// Convert markdown content to HTML
const htmlContent = article ? marked(article.content || '') : '';
---

<MainLayout title={article ? `${article.title} | Synclaro Blog` : 'Artikel nicht gefunden | Synclaro Blog'}>
  <article class="relative py-16 sm:py-24 px-4 sm:px-6 lg:px-12">
    <!-- Dark gradient background -->
    <div class="absolute inset-0 bg-gradient-to-b from-dark-900 via-dark-800 to-dark-900"></div>

    <!-- Background blur elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 right-1/4 w-64 md:w-96 h-64 md:h-96 bg-neon-purple/3 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-64 md:w-96 h-64 md:h-96 bg-electric-cyan/3 rounded-full filter blur-3xl"></div>
    </div>

    <div class="relative z-10 container mx-auto max-w-4xl">
      {error && (
        <div class="text-center py-12">
          <p class="text-red-400 text-xl mb-4">{error}</p>
          <a href="/blog" class="text-neon-purple hover:text-electric-cyan transition-colors">
            ← Zurück zum Blog
          </a>
        </div>
      )}

      {article && (
        <>
          <!-- Back to Blog -->
          <nav class="mb-8 animate-fade-in">
            <a
              href="/blog"
              class="inline-flex items-center gap-2 text-neon-purple hover:text-electric-cyan transition-colors font-medium"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
              </svg>
              Zurück zum Blog
            </a>
          </nav>

          <!-- Article Header -->
          <header class="mb-12 animate-fade-in" style="animation-delay: 100ms">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-6 leading-tight text-white">
              {article.title}
            </h1>

            <!-- Article Meta -->
            <div class="flex flex-wrap items-center gap-6 text-gray-400 mb-6">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>{article.author || 'Synclaro Team'}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(article.published_at || article.created_at)}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{article.reading_time} Min. Lesezeit</span>
              </div>
            </div>
          </header>

          <!-- Featured Image -->
          <div class="mb-12 rounded-xl overflow-hidden border border-white/10 bg-dark-800/50 animate-fade-in" style="animation-delay: 150ms">
            <img
              src={getBlogImageUrl(article.slug)}
              alt={article.title}
              class="w-full h-auto max-h-[500px] object-cover"
              id="featured-image"
              onerror="document.getElementById('featured-image').parentElement.style.display='none'"
            />
          </div>

          <!-- Article Content -->
          <div class="blog-content animate-fade-in" style="animation-delay: 200ms" set:html={htmlContent} />

          <!-- Related Articles -->
          {relatedArticles.length > 0 && (
            <section class="border-t border-white/10 pt-12 mt-16 animate-fade-in" style="animation-delay: 300ms">
              <h2 class="text-2xl sm:text-3xl font-display font-bold mb-8 text-white">
                Ähnliche <span class="gradient-text">Artikel</span>
              </h2>

              <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {relatedArticles.map((related) => (
                  <a href={`/blog/${related.slug}`} class="group">
                    <div class="relative h-full">
                      <div class="absolute -inset-0.5 bg-gradient-to-r from-neon-purple/0 to-electric-cyan/0 group-hover:from-neon-purple/20 group-hover:to-electric-cyan/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-500"></div>

                      <div class="relative h-full bg-dark-800/60 backdrop-blur-lg border border-white/10 rounded-2xl p-6 hover:border-white/20 transition-all group-hover:scale-[1.02]">
                        <!-- Meta -->
                        <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                          <div class="flex items-center gap-1">
                            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>{formatDate(related.published_at)}</span>
                          </div>
                          <div class="flex items-center gap-1">
                            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>{related.reading_time} Min.</span>
                          </div>
                        </div>

                        <!-- Title -->
                        <h3 class="text-lg font-bold text-white mb-3 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-neon-purple group-hover:to-electric-cyan transition-all line-clamp-2">
                          {related.title}
                        </h3>

                        <!-- Excerpt -->
                        <p class="text-gray-300 text-sm mb-4 line-clamp-3">
                          {related.meta_description}
                        </p>

                        <!-- Read more -->
                        <div class="flex items-center text-neon-purple group-hover:text-electric-cyan transition-colors">
                          <span class="text-sm font-medium">Weiterlesen</span>
                          <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </div>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )}
        </>
      )}
    </div>
  </article>
</MainLayout>

<style is:global>
  .gradient-text {
    background: linear-gradient(135deg, #a855f7, #06b6d4);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ============================================
     BLOG CONTENT STYLING - Based on old CRM blog
     ============================================ */

  .blog-content {
    color: #e5e7eb;
    line-height: 1.8;
    font-size: 1.125rem;
  }

  /* Headings */
  .blog-content h1,
  .blog-content h2,
  .blog-content h3,
  .blog-content h4,
  .blog-content h5,
  .blog-content h6 {
    color: #ffffff;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-content h1 {
    font-size: 2.25rem;
  }

  .blog-content h2 {
    font-size: 1.875rem;
    background: linear-gradient(135deg, #a855f7, #06b6d4);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(168, 85, 247, 0.3);
  }

  .blog-content h3 {
    font-size: 1.5rem;
    color: #d1d5db;
  }

  .blog-content h4 {
    font-size: 1.25rem;
  }

  /* Paragraphs */
  .blog-content p {
    margin-bottom: 1.5rem;
  }

  /* Strong/Bold */
  .blog-content strong {
    color: #ffffff;
    font-weight: 600;
  }

  /* Links */
  .blog-content a {
    color: #a855f7;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }

  .blog-content a:hover {
    color: #06b6d4;
  }

  /* Lists */
  .blog-content ul,
  .blog-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .blog-content ul {
    list-style-type: disc;
  }

  .blog-content ol {
    list-style-type: decimal;
  }

  .blog-content li {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .blog-content li::marker {
    color: #a855f7;
  }

  /* Blockquotes */
  .blog-content blockquote {
    border-left: 4px solid #a855f7;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #d1d5db;
    background: rgba(168, 85, 247, 0.05);
    padding: 1rem 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  /* Code */
  .blog-content code {
    background-color: rgba(255, 255, 255, 0.1);
    color: #06b6d4;
    padding: 0.2rem 0.4rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    font-family: ui-monospace, monospace;
  }

  .blog-content pre {
    background-color: rgba(0, 0, 0, 0.4);
    padding: 1.25rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .blog-content pre code {
    background: none;
    padding: 0;
    color: #e5e7eb;
  }

  /* Tables */
  .blog-content table {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  .blog-content thead {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(6, 182, 212, 0.3));
  }

  .blog-content th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .blog-content td {
    padding: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #d1d5db;
  }

  .blog-content tbody tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.02);
  }

  .blog-content tbody tr:hover {
    background-color: rgba(168, 85, 247, 0.05);
  }

  /* Horizontal Rule */
  .blog-content hr {
    margin: 3rem 0;
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, #a855f7, #06b6d4, transparent);
  }

  /* Images */
  .blog-content img {
    margin: 2rem auto;
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 100%;
    height: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-content {
      font-size: 1rem;
    }

    .blog-content h1 {
      font-size: 1.75rem;
    }

    .blog-content h2 {
      font-size: 1.5rem;
    }

    .blog-content h3 {
      font-size: 1.25rem;
    }

    .blog-content table {
      display: block;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .blog-content th,
    .blog-content td {
      padding: 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>
