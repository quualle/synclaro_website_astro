---
import MainLayout from '../../../layouts/MainLayout.astro';

const title = "Support | Academy Portal";
const description = "Hilfe und Kontakt für Academy-Teilnehmer.";

const faqs = [
  {
    question: "Wie erhalte ich Zugang zu den Aufzeichnungen?",
    answer: "Alle Aufzeichnungen werden innerhalb von 24 Stunden nach der Session im Portal unter 'Aufzeichnungen' verfügbar gemacht."
  },
  {
    question: "Kann ich mein Kursdatum ändern?",
    answer: "Terminänderungen sind bis 14 Tage vor Kursbeginn kostenlos möglich. Kontaktieren Sie uns einfach per E-Mail."
  },
  {
    question: "Wie funktioniert die Stornierung?",
    answer: "Bis 30 Tage vor Kursbeginn erhalten Sie eine vollständige Rückerstattung. Danach gelten unsere AGB."
  }
];
---

<MainLayout title={title} description={description}>
  <section class="pt-24 pb-8 px-6 lg:px-12 bg-white border-b-2 border-black">
    <div class="container mx-auto max-w-6xl">
      <div class="flex items-center gap-4 mb-4">
        <a href="/academy/portal" class="text-swiss-orange hover:underline font-bold text-sm">
          ← Zurück zum Dashboard
        </a>
      </div>
      <h1 class="text-3xl font-black">Support</h1>
      <p class="text-gray-600 mt-2">Wir helfen Ihnen gerne weiter</p>
    </div>
  </section>

  <section class="py-12 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Kontakt -->
        <div class="bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-xl font-black mb-6">Kontakt aufnehmen</h2>

          <form class="space-y-4">
            <div>
              <label for="subject" class="block text-sm font-bold mb-2">Betreff *</label>
              <select
                id="subject"
                class="w-full px-4 py-3 border-2 border-black focus:outline-none focus:ring-2 focus:ring-swiss-orange"
              >
                <option>Technisches Problem</option>
                <option>Terminänderung</option>
                <option>Frage zum Kursinhalt</option>
                <option>Sonstiges</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-bold mb-2">Nachricht *</label>
              <textarea
                id="message"
                rows="5"
                class="w-full px-4 py-3 border-2 border-black focus:outline-none focus:ring-2 focus:ring-swiss-orange"
                placeholder="Beschreiben Sie Ihr Anliegen..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="group relative inline-flex items-center justify-center bg-gradient-to-r from-swiss-orange to-orange-600 text-white px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-swiss-orange/25 hover:shadow-xl hover:shadow-swiss-orange/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden w-full"
            >
              <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12"></div>
              <span class="relative">Nachricht senden</span>
            </button>
          </form>

          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">Oder kontaktieren Sie uns direkt:</p>
            <p class="font-bold">support@synclaro.de</p>
            <p class="text-gray-600">+49 160 99471052</p>
          </div>
        </div>

        <!-- FAQs -->
        <div class="bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-xl font-black mb-6">Häufige Fragen</h2>

          <div class="space-y-4">
            {faqs.map((faq) => (
              <details class="group border-2 border-black">
                <summary class="p-4 cursor-pointer font-bold flex items-center justify-between hover:bg-gray-50">
                  {faq.question}
                  <svg class="w-5 h-5 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4 pt-0 text-gray-600">
                  {faq.answer}
                </div>
              </details>
            ))}
          </div>

          <div class="mt-6 p-4 bg-swiss-orange/10 border-2 border-swiss-orange">
            <p class="text-sm">
              <strong>Tipp:</strong> Die meisten Fragen werden innerhalb von 24 Stunden beantwortet.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
