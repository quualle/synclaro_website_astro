      </div>

      <!-- Result -->
      <div class="mt-8 bg-gray-900 text-white p-6 md:p-8 rounded-2xl text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-orange-500/20 via-transparent to-orange-500/20"></div>
        <div class="relative">
