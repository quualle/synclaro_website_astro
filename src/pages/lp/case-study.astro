---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "KI Case Study herunterladen | Synclaro";
const description = "Laden Sie unsere detaillierte Case Study herunter. Erfahren Sie, wie Unternehmen KI erfolgreich einsetzen.";

const highlights = [
  { metric: '40%', label: 'Zeitersparnis' },
  { metric: '3 Monate', label: 'Projektdauer' },
  { metric: '250%', label: 'ROI im ersten Jahr' }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            CASE STUDY
          </span>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
            KI-Erfolg <span class="text-swiss-orange">aus der Praxis</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            Erfahren Sie, wie ein mittelst√§ndisches Unternehmen seine Prozesse
            mit KI transformiert hat. Mit konkreten Zahlen und Learnings.
          </p>

          <div class="grid grid-cols-3 gap-4 mb-8">
            {highlights.map((highlight) => (
              <div class="bg-gray-50 border-2 border-black p-4 text-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                <div class="text-2xl font-black text-swiss-orange">{highlight.metric}</div>
                <div class="text-xs text-gray-600">{highlight.label}</div>
              </div>
            ))}
          </div>
        </div>

        <!-- Lead Capture Form -->
        <div class="bg-gray-50 border-2 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-2xl font-black mb-6">Case Study herunterladen</h2>

          <form action="/danke?source=case-study" method="GET" class="space-y-4">
            <div>
              <label class="block text-sm font-bold mb-2">Name *</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Name"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">E-Mail *</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="ihre@email.de"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">Unternehmen</label>
              <input
                type="text"
                name="company"
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Unternehmen"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-swiss-orange text-white font-bold py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
            >
              Jetzt herunterladen
            </button>

            <p class="text-xs text-gray-500 text-center">
              Sie erhalten den Download-Link direkt per E-Mail.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
