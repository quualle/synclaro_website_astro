---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "Beratung | Synclaro Academy";
const description = "Wie möchtest du mit uns in Kontakt treten? Wähle die passende Option für dich.";

const contactOptions = [
  {
    title: "Direkt anrufen",
    description: "Sprich sofort mit uns. Wir sind täglich von 8:00 bis 18:00 Uhr für dich da.",
    cta: "+49 160 99 47 10 52",
    href: "tel:+4916099471052",
    isButton: false
  },
  {
    title: "Kontaktformular",
    description: "Schreib uns deine Nachricht. Wir melden uns schnellstmöglich bei dir.",
    cta: "Formular öffnen",
    href: "/kontakt",
    isButton: true
  },
  {
    title: "Beratungsgespräch",
    description: "Vereinbare ein kostenloses 15-minütiges Beratungsgespräch mit uns.",
    cta: "Termin vereinbaren",
    href: "https://cal.com/marcoheer/erstgesprach?overlayCalendar=true",
    isButton: true,
    external: true
  },
  {
    title: "Webinar-Termin",
    description: "Schnupper bei einem unserer Webinare rein und lerne uns kennen.",
    cta: "Termin ausmachen",
    href: "/academy/webinar",
    isButton: true
  }
];
---

<MainLayout title={title} description={description}>
  <!-- Main Content -->
  <section class="pt-24 pb-20 px-6 lg:px-12 bg-white min-h-screen">
    <div class="container mx-auto max-w-6xl">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-black mb-6">
          Wie möchtest du mit uns <span class="text-swiss-orange">in Kontakt treten</span>?
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Wähle die passende Option für dich. Wir freuen uns auf den Austausch!
        </p>
      </div>

      <!-- Contact Options Grid -->
      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {contactOptions.map((option) => (
          <a
            href={option.href}
            target={option.external ? "_blank" : undefined}
            rel={option.external ? "noopener noreferrer" : undefined}
            class="block bg-gray-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150 group"
          >
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-black flex items-center justify-center mb-6 group-hover:bg-swiss-orange/20 transition-colors">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                {option.title === "Direkt anrufen" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                )}
                {option.title === "Kontaktformular" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                )}
                {option.title === "Beratungsgespräch" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                )}
                {option.title === "Webinar-Termin" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                )}
              </svg>
            </div>
            <h3 class="text-2xl font-black mb-3">{option.title}</h3>
            <p class="text-gray-600 mb-6">
              {option.description}
            </p>
            <span class="inline-flex items-center gap-2 text-swiss-orange font-bold group-hover:gap-3 transition-all">
              {option.cta}
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      <!-- Back Link -->
      <div class="text-center mt-12">
        <a href="/academy" class="inline-flex items-center gap-2 text-gray-500 hover:text-black transition-colors font-medium">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Zurück zur Academy
        </a>
      </div>
    </div>
  </section>
</MainLayout>
