---
import MainLayout from '../../layouts/MainLayout.astro';

const config = {
  title: 'Vielen Dank!',
  subtitle: 'Ihre Anfrage ist eingegangen',
  message: 'Buchen Sie jetzt Ihren 15-Minuten-Call und starten Sie direkt durch.',
  links: [
    {
      href: '/ki-automatisierung',
      title: 'KI-Automatisierung',
      description: 'Prozesse automatisieren und effizienter arbeiten'
    },
    {
      href: '/dsgvo-ki',
      title: 'DSGVO-konforme KI',
      description: '100% sichere KI-Lösungen für deutsche Unternehmen'
    },
    {
      href: '/referenzen',
      title: 'Erfolgsgeschichten',
      description: 'Wie andere Unternehmen profitieren'
    }
  ]
};
---

<MainLayout title="Vielen Dank - KI-Beratung | Synclaro">
  <div class="min-h-screen bg-white flex items-center py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-12">
      <div class="max-w-4xl mx-auto">
        <!-- Success Icon & Message -->
        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-swiss-orange border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] mb-6">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </div>

          <h1 class="text-5xl md:text-6xl lg:text-7xl font-black tracking-tight mb-4">
            {config.title}
          </h1>
          <h2 class="text-2xl md:text-3xl font-bold text-swiss-orange mb-6">
            {config.subtitle}
          </h2>

          <p class="text-xl text-gray-600 mb-4">
            {config.message}
          </p>
        </div>

        <!-- Booking Section with Marco -->
        <div class="bg-gray-50 border-2 border-black p-6 md:p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] mb-8">
          <div class="grid md:grid-cols-2 gap-6 items-center">
            <!-- Left side - Marco's info -->
            <div class="text-center md:text-left">
              <div class="relative w-40 h-40 mx-auto md:mx-0 mb-3 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] overflow-hidden">
                <img
                  src="/images/marco-heer.webp"
                  alt="Marco Heer - KI-Beratung und DSGVO-konforme Automatisierung für KMU und Mittelstand"
                  class="w-full h-full object-cover grayscale"
                />
              </div>
              <h3 class="text-lg font-black text-black mb-1">Marco Heer</h3>
              <p class="text-gray-600 text-sm">Gründer von Synclaro</p>
              <p class="text-xs text-gray-500 mt-1 font-mono uppercase tracking-wider">
                Ihr persönlicher KI-Experte
              </p>
            </div>

            <!-- Right side - Booking info -->
            <div>
              <h2 class="text-xl md:text-2xl font-black text-black mb-3">
                Möchten Sie nicht warten?
              </h2>
              <p class="text-base text-gray-600 mb-4">
                Buchen Sie direkt einen Termin für Ihr kostenloses Erstgespräch mit mir.
              </p>

              <a
                href="/termin"
                class="inline-block bg-swiss-orange text-white font-bold px-6 py-3 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 active:shadow-none active:translate-x-1 active:translate-y-1 transition-all duration-150"
              >
                Jetzt kostenlosen Termin buchen
              </a>
            </div>
          </div>
        </div>

        <!-- Additional Resources -->
        <div class="grid md:grid-cols-3 gap-6">
          {config.links.map((link) => (
            <a
              href={link.href}
              class="group bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200"
            >
              <h3 class="text-lg font-black text-black mb-2 group-hover:text-swiss-orange transition-colors">
                {link.title}
              </h3>
              <p class="text-sm text-gray-600">
                {link.description}
              </p>
              <div class="mt-4 flex items-center text-swiss-orange font-bold text-sm">
                <span>Mehr erfahren</span>
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</MainLayout>
