---
import MainLayout from '../layouts/MainLayout.astro';

const title = "Synclaro KI-Playbook - Ihr Leitfaden für KI im Mittelstand | Synclaro";
const description = "Laden Sie unser kostenloses KI-Playbook herunter. Praktische Strategien und Anleitungen für die erfolgreiche KI-Integration.";

const chapters = [
  { number: '01', title: 'Grundlagen der KI', description: 'Was ist KI und warum ist sie für den Mittelstand relevant?' },
  { number: '02', title: 'Potenzialanalyse', description: 'Wie Sie die besten Einsatzgebiete in Ihrem Unternehmen identifizieren.' },
  { number: '03', title: 'Technologieauswahl', description: 'Welche KI-Lösungen passen zu Ihren Anforderungen?' },
  { number: '04', title: 'Implementierung', description: 'Schritt-für-Schritt zur erfolgreichen KI-Einführung.' },
  { number: '05', title: 'DSGVO & Compliance', description: 'Datenschutzkonform KI nutzen.' },
  { number: '06', title: 'ROI-Berechnung', description: 'So messen Sie den Erfolg Ihrer KI-Investition.' }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            KOSTENLOSES E-BOOK
          </span>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
            Das Synclaro <span class="text-swiss-orange">KI-Playbook</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            Ihr umfassender Leitfaden für die erfolgreiche Integration von KI in Ihrem Unternehmen.
            50+ Seiten praktisches Wissen.
          </p>

          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Praktische Checklisten</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>ROI-Rechner Vorlage</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Fallstudien aus dem Mittelstand</span>
            </li>
          </ul>
        </div>

        <!-- Download Form -->
        <div class="bg-gray-50 border-2 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-2xl font-black mb-6">Kostenlos herunterladen</h2>

          <form action="/danke?source=ki-playbook" method="GET" class="space-y-4">
            <div>
              <label class="block text-sm font-bold mb-2">Name *</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Name"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">E-Mail *</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="ihre@email.de"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">Unternehmen</label>
              <input
                type="text"
                name="company"
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Unternehmen"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-swiss-orange text-white font-bold py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 active:shadow-none active:translate-x-1 active:translate-y-1 transition-all duration-150"
            >
              Jetzt herunterladen
            </button>

            <p class="text-xs text-gray-500 text-center">
              Mit dem Download stimmen Sie unserer <a href="/datenschutz" class="text-swiss-orange hover:underline">Datenschutzerklärung</a> zu.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Chapters Section -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-center mb-12">
        Was Sie <span class="text-swiss-orange">lernen werden</span>
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {chapters.map((chapter) => (
          <div class="bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <span class="text-4xl font-black text-swiss-orange/30">{chapter.number}</span>
            <h3 class="text-xl font-black mt-2 mb-2">{chapter.title}</h3>
            <p class="text-gray-600">{chapter.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
