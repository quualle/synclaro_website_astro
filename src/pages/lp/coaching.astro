---
import '../../styles/global.css';
import LPUserBehaviorTracker from '../../components/LPUserBehaviorTracker';

const title = "KI-Ausbildung für Macher | Synclaro Academy";
const description = "Werde zum KI-Profi: Gruppen-Coaching für Selbstständige oder Mastermind für Geschäftsführer. Bewirb dich jetzt.";

// Testimonials
const testimonials = [
  {
    name: 'Sara Wietritschowski',
    role: 'Leiterin Familienbetrieb',
    quote: 'Nach 50 Stunden Coaching mit Marco habe ich endlich jemanden gefunden, der mich genau da abholt, wo ich stehe.',
    initials: 'SW',
  },
  {
    name: 'Evelyn Biesinger',
    role: 'Familienbetrieb Handwerk & Coaching',
    quote: 'Jetzt habe ich einen guten Überblick über die Möglichkeiten, kann komplexere Tools anwenden und baue sogar eigene Programme.',
    initials: 'EB',
  },
  {
    name: 'Norman Liersch',
    role: 'GF Pflegehilfe für Senioren 24 GmbH',
    quote: 'Marco hat über mehrere Monate hinweg unser Geschäftsmodell in der Tiefe verstanden und das Automatisierungspotenzial freigelegt.',
    initials: 'NL',
  },
];

// Gruppen-Coaching Workflow
const gruppenCoachingSteps = [
  { num: '01', title: 'Kick-off & Setup', desc: 'Gemeinsamer Start, Tool-Einrichtung, Entwicklungsumgebung aufsetzen' },
  { num: '02', title: 'Wöchentliche Sessions', desc: '6 Monate, 2h/Woche: Agent-Coding, n8n, Webseiten, Hosting' },
  { num: '03', title: 'Hands-on Projekte', desc: 'Eigene Webseiten, KI-Agents, Automatisierungen, Datenbanken' },
  { num: '04', title: 'Multimodale KI', desc: 'Bild- & Videogenerierung, neueste KI-Tools für Alltag & Beruf' },
];

// Mastermind Workflow
const mastermindDays = [
  { day: 1, title: 'KI-Grundlagen & Strategie', desc: 'Verstehe, was modernste Unternehmen mit KI realisieren' },
  { day: 2, title: 'Status-Quo-Analyse', desc: 'Detaillierte Analyse deiner Unternehmenssituation' },
  { day: 3, title: 'Strategisches Wissen', desc: 'Anbieter, Tools, Wissensmanagement, Implementierung' },
  { day: 4, title: 'Fahrplan-Entwicklung', desc: 'Einzel-Sessions, Company GPT bauen' },
  { day: 5, title: 'Finalisierung', desc: 'Individueller KI-Fahrplan, konkrete nächste Schritte' },
];

// Problem icons (SVG paths)
const problemIcons = [
  // Puzzle/Confusion icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />`,
  // Clock icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  // Target icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
];
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://synclaro.de/lp/coaching" />
  </head>

  <body class="min-h-screen bg-white text-gray-900">

    <!-- Minimal Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-black tracking-tight text-gray-900">
          SYN<span class="text-swiss-orange">C</span>LARO
        </a>
        <a
          href="#bewerbung"
          class="bg-swiss-orange text-white px-6 py-2.5 font-bold border-2 border-swiss-orange hover:bg-white hover:text-swiss-orange transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Jetzt bewerben
        </a>
      </nav>
    </header>

    <!-- HERO SECTION -->
    <section data-section-id="hero" data-section-name="Hero" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 bg-gradient-to-br from-gray-50 via-white to-orange-50">
      <!-- Animated Grid Background -->
      <div class="absolute inset-0 opacity-30" style="background-image: linear-gradient(rgba(255,79,0,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,79,0,0.1) 1px, transparent 1px); background-size: 60px 60px;"></div>

      <!-- Animated Geometric Shapes -->
      <div class="absolute top-20 left-10 w-20 h-20 border-2 border-swiss-orange/20 rotate-45 animate-float-slow"></div>
      <div class="absolute top-40 right-20 w-32 h-32 border-2 border-swiss-orange/10 rounded-full animate-float-medium"></div>
      <div class="absolute bottom-40 left-20 w-16 h-16 bg-swiss-orange/5 rotate-12 animate-float-fast"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 border-2 border-swiss-orange/15 animate-spin-very-slow"></div>

      <!-- Gradient Orbs -->
      <div class="absolute top-1/4 right-0 w-[600px] h-[600px] bg-gradient-to-br from-swiss-orange/10 to-transparent rounded-full blur-3xl translate-x-1/3 animate-pulse-slow"></div>
      <div class="absolute bottom-1/4 left-0 w-[500px] h-[500px] bg-gradient-to-tr from-orange-200/20 to-transparent rounded-full blur-3xl -translate-x-1/3 animate-pulse-slower"></div>

      <div class="relative z-10 text-center px-4 max-w-5xl mx-auto py-20">
        <!-- Badge -->
        <div class="mb-8 opacity-0 animate-slide-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
          <span class="inline-flex items-center gap-3 px-6 py-3 bg-white border-2 border-swiss-orange/30 text-swiss-orange font-mono text-sm uppercase tracking-widest shadow-lg">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-swiss-orange opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-swiss-orange"></span>
            </span>
            SYNCLARO ACADEMY
          </span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.9] mb-8">
          <span class="block text-gray-900 opacity-0 animate-slide-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">Werde zum</span>
          <span class="block relative opacity-0 animate-slide-up" style="animation-delay: 0.3s; animation-fill-mode: forwards;">
            <span class="bg-gradient-to-r from-swiss-orange via-orange-500 to-swiss-orange bg-clip-text text-transparent animate-gradient-x">
              KI-Profi.
            </span>
            <svg class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-48 h-3 text-swiss-orange/30" viewBox="0 0 200 12" fill="currentColor">
              <path d="M0,6 Q50,0 100,6 T200,6" stroke="currentColor" stroke-width="3" fill="none" class="animate-draw-line"/>
            </svg>
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-10 opacity-0 animate-slide-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Nicht nur verstehen, was möglich ist – sondern es
          <span class="text-gray-900 font-bold relative">
            selbst umsetzen können.
            <span class="absolute bottom-0 left-0 w-full h-1 bg-swiss-orange/30"></span>
          </span>
        </p>

        <!-- Value Props -->
        <div class="flex flex-wrap justify-center gap-8 mb-12 opacity-0 animate-slide-up" style="animation-delay: 0.5s; animation-fill-mode: forwards;">
          <div class="flex items-center gap-3 text-gray-700 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/10 flex items-center justify-center group-hover:bg-swiss-orange/20 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="font-medium">6 Monate Intensiv</span>
          </div>
          <div class="flex items-center gap-3 text-gray-700 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/10 flex items-center justify-center group-hover:bg-swiss-orange/20 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <span class="font-medium">Kleine Gruppen</span>
          </div>
          <div class="flex items-center gap-3 text-gray-700 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/10 flex items-center justify-center group-hover:bg-swiss-orange/20 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <span class="font-medium">Hands-on Projekte</span>
          </div>
        </div>

        <!-- CTA -->
        <div class="opacity-0 animate-slide-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <a
            href="#bewerbung"
            class="group inline-flex items-center gap-3 bg-swiss-orange text-white font-bold px-10 py-5 text-xl border-2 border-swiss-orange shadow-[0_4px_20px_rgba(255,79,0,0.3)] hover:shadow-[0_8px_40px_rgba(255,79,0,0.4)] hover:bg-white hover:text-swiss-orange hover:-translate-y-1 transition-all duration-300"
          >
            Jetzt bewerben
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 1s; animation-fill-mode: forwards;">
          <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex items-start justify-center p-1">
            <div class="w-1.5 h-3 bg-swiss-orange rounded-full animate-scroll-indicator"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- PROBLEM SECTION -->
    <section data-section-id="problem" data-section-name="Problem" class="py-24 bg-white relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>

      <div class="container mx-auto px-4 md:px-8 max-w-6xl">
        <div class="text-center mb-16 scroll-reveal">
          <span class="inline-block px-4 py-2 bg-gray-100 border-2 border-gray-200 text-gray-600 font-mono text-xs uppercase tracking-widest mb-6">
            Das Problem
          </span>
          <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
            KI verändert <span class="text-swiss-orange">alles</span> – aber wie fängst du an?
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.1s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[0]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">Überfordert von Tools</h3>
            <p class="text-gray-600">ChatGPT, Claude, Midjourney, n8n... Jeden Tag neue Tools. Welche brauchst du wirklich?</p>
          </div>

          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.2s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[1]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">Keine Zeit für Trial & Error</h3>
            <p class="text-gray-600">Du hast ein Business zu führen. Stundenlange YouTube-Tutorials sind keine Option.</p>
          </div>

          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.3s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[2]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">Wissen ≠ Können</h3>
            <p class="text-gray-600">Du liest viel über KI – aber du kannst nichts selbst bauen. Das muss sich ändern.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- SOLUTION SECTION -->
    <section data-section-id="solution" data-section-name="Lösung" class="py-24 bg-gray-50 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-20 right-10 w-40 h-40 border-2 border-swiss-orange/10 rounded-full animate-float-slow"></div>
      <div class="absolute bottom-20 left-10 w-24 h-24 bg-swiss-orange/5 rotate-45 animate-float-medium"></div>

      <div class="container mx-auto px-4 md:px-8 max-w-6xl relative z-10">
        <div class="text-center mb-16 scroll-reveal">
          <span class="inline-block px-4 py-2 bg-white border-2 border-swiss-orange/30 text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-sm">
            Die Lösung
          </span>
          <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
            Zwei Wege zum <span class="text-swiss-orange">KI-Profi</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Je nachdem, wo du stehst und was du erreichen willst, haben wir das passende Format für dich.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Gruppen-Coaching Card -->
          <div class="scroll-reveal relative bg-white border-2 border-gray-200 p-8 hover:border-swiss-orange hover:shadow-2xl transition-all duration-500 group overflow-hidden" style="animation-delay: 0.1s;">
            <!-- Hover glow -->
            <div class="absolute inset-0 bg-gradient-to-br from-swiss-orange/0 to-swiss-orange/0 group-hover:from-swiss-orange/5 group-hover:to-transparent transition-all duration-500"></div>

            <div class="relative z-10">
              <!-- Video Preview -->
              <div class="relative mb-6 overflow-hidden border-2 border-gray-200 group-hover:border-swiss-orange/50 transition-colors">
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-700"
                >
                  <source src="/groupcoaching.mp4" type="video/mp4" />
                </video>
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
              </div>

              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-swiss-orange/10 border-2 border-swiss-orange flex items-center justify-center">
                  <svg class="w-7 h-7 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-black text-gray-900">Gruppen-Coaching</h3>
                  <p class="text-swiss-orange font-bold">6 Monate Intensiv</p>
                </div>
              </div>

              <p class="text-gray-600 mb-6 text-lg">
                Für <span class="text-gray-900 font-bold">Macher und Selbstständige</span>, die alles selbst können wollen. Du lernst, KI-Tools nicht nur zu nutzen, sondern eigene Lösungen zu bauen.
              </p>

              <div class="space-y-4 mb-8">
                {gruppenCoachingSteps.map((step) => (
                  <div class="flex items-start gap-4 group/step hover:translate-x-1 transition-transform">
                    <div class="w-10 h-10 bg-gray-100 border-2 border-gray-300 group-hover/step:border-swiss-orange group-hover/step:bg-swiss-orange/10 flex items-center justify-center text-gray-600 group-hover/step:text-swiss-orange font-bold text-sm flex-shrink-0 transition-colors">
                      {step.num}
                    </div>
                    <div>
                      <div class="font-bold text-gray-900">{step.title}</div>
                      <div class="text-sm text-gray-500">{step.desc}</div>
                    </div>
                  </div>
                ))}
              </div>

              <div class="bg-swiss-orange/5 border-2 border-swiss-orange/20 p-4 mb-6">
                <p class="text-sm text-gray-700">
                  <span class="text-swiss-orange font-bold">Ergebnis:</span> Du gehörst zu den Top 0,1% der KI-Nutzer und kannst selbstständig automatisieren, bauen und umsetzen.
                </p>
              </div>

              <a href="#bewerbung" class="block w-full bg-swiss-orange text-white text-center font-bold py-4 border-2 border-swiss-orange hover:bg-white hover:text-swiss-orange transition-all duration-300 shadow-lg hover:shadow-xl">
                Für Gruppen-Coaching bewerben
              </a>
            </div>
          </div>

          <!-- Mastermind Card -->
          <div class="scroll-reveal relative bg-white border-2 border-gray-200 p-8 hover:border-swiss-orange hover:shadow-2xl transition-all duration-500 group overflow-hidden" style="animation-delay: 0.2s;">
            <div class="absolute inset-0 bg-gradient-to-br from-swiss-orange/0 to-swiss-orange/0 group-hover:from-swiss-orange/5 group-hover:to-transparent transition-all duration-500"></div>

            <div class="relative z-10">
              <!-- Video Preview -->
              <div class="relative mb-6 overflow-hidden border-2 border-gray-200 group-hover:border-swiss-orange/50 transition-colors">
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-700"
                >
                  <source src="/mastermind.mp4" type="video/mp4" />
                </video>
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
              </div>

              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-swiss-orange/10 border-2 border-swiss-orange flex items-center justify-center">
                  <svg class="w-7 h-7 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-black text-gray-900">Mastermind</h3>
                  <p class="text-swiss-orange font-bold">3 Tage Retreat</p>
                </div>
              </div>

              <p class="text-gray-600 mb-6 text-lg">
                Für <span class="text-gray-900 font-bold">Geschäftsführer und C-Level</span>, die strategisch verstehen wollen, um KI erfolgreich zu delegieren und implementieren.
              </p>

              <div class="space-y-4 mb-8">
                {mastermindDays.map((day) => (
                  <div class="flex items-start gap-4 group/step hover:translate-x-1 transition-transform">
                    <div class="w-10 h-10 bg-gray-100 border-2 border-gray-300 group-hover/step:border-swiss-orange group-hover/step:bg-swiss-orange/10 flex items-center justify-center text-gray-600 group-hover/step:text-swiss-orange font-bold text-sm flex-shrink-0 transition-colors">
                      {day.day}
                    </div>
                    <div>
                      <div class="font-bold text-gray-900">{day.title}</div>
                      <div class="text-sm text-gray-500">{day.desc}</div>
                    </div>
                  </div>
