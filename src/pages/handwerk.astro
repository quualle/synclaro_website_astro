  { date: '07.01.2026', day: 'Mittwoch', time: '10:00 - 11:00' },
  { date: '21.01.2026', day: 'Mittwoch', time: '10:00 - 11:00' },
];

// 5-Day Program
const phases = [
  {
    day: 'TAG 1',
    title: 'Verstehen, was geht',
    main: 'Die Welt der KI verstehen.',
