---
import MainLayout from '../../layouts/MainLayout.astro';
import { createClient } from '@supabase/supabase-js';

// Initialize Supabase client
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || 'https://ouqhysemcldamthpuqqq.supabase.co';
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im91cWh5c2VtY2xkYW10aHB1cXFxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzUyMjk5MjEsImV4cCI6MjA1MDgwNTkyMX0.xR8KGGKWH2JLdo6k3HK-kK3G1TrmXHLrfZjJkeKMFig';

const supabase = createClient(supabaseUrl, supabaseAnonKey);

// Get slug from URL
const { slug } = Astro.params;

// Fetch article by slug
let article: any = null;
let error = null;

try {
  const { data, error: fetchError } = await supabase
    .from('articles')
    .select('*')
    .eq('slug', slug)
    .eq('status', 'published')
    .single();

  if (fetchError) {
    if (fetchError.code === 'PGRST116') {
      // No rows returned - article not found
      return Astro.redirect('/blog');
    }
    console.error('Supabase error:', fetchError);
    error = fetchError.message;
  } else {
    article = data;
  }
} catch (e) {
  console.error('Error fetching article:', e);
  error = 'Fehler beim Laden des Artikels';
}

// If no article found, redirect to blog index
if (!article && !error) {
  return Astro.redirect('/blog');
}

// Helper function to format date
function formatDate(dateString: string | null) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get related articles
let relatedArticles: any[] = [];
if (article && article.tags && article.tags.length > 0) {
  try {
    const { data: related } = await supabase
      .from('articles')
      .select('id, title, slug, excerpt, featured_image, published_at, reading_time')
      .eq('status', 'published')
      .neq('id', article.id)
      .limit(3);

    relatedArticles = related || [];
  } catch (e) {
    console.error('Error fetching related articles:', e);
  }
}
---

<MainLayout title={article ? `${article.title} | Synclaro Blog` : 'Artikel nicht gefunden | Synclaro Blog'}>
  <div class="min-h-screen bg-white">
    {error && (
      <div class="pt-32 pb-20 px-6">
        <div class="container mx-auto max-w-4xl text-center">
          <div class="bg-red-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <p class="text-red-600 font-bold text-xl">{error}</p>
            <a href="/blog" class="inline-block mt-4 text-swiss-orange hover:text-black font-bold">
              ← Zurück zum Blog
            </a>
          </div>
        </div>
      </div>
    )}

    {article && (
      <>
        <!-- Article Header -->
        <header class="pt-24 pb-12 px-6 lg:px-12">
          <div class="container mx-auto max-w-4xl">
            <!-- Back link -->
            <a href="/blog" class="inline-flex items-center text-swiss-orange hover:text-black font-bold mb-8 transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
              </svg>
              Zurück zum Blog
            </a>

            <!-- Category/Topic -->
            {article.topic && (
              <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                {article.topic}
              </span>
            )}

            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
              {article.title}
            </h1>

            <!-- Meta -->
            <div class="flex flex-wrap items-center gap-6 text-gray-600 mb-8">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="font-medium">{article.author || 'Synclaro Team'}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(article.published_at || article.created_at)}</span>
              </div>
              {article.reading_time && (
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{article.reading_time} Min. Lesezeit</span>
                </div>
              )}
            </div>

            <!-- Tags -->
            {article.tags && article.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {article.tags.map((tag: string) => (
                  <span class="px-3 py-1 bg-gray-100 border-2 border-black text-sm font-mono shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <!-- Featured Image -->
        {article.featured_image && (
          <div class="px-6 lg:px-12 mb-12">
            <div class="container mx-auto max-w-4xl">
              <div class="border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] overflow-hidden">
                <img
                  src={article.featured_image}
                  alt={article.title}
                  class="w-full h-auto"
                />
              </div>
            </div>
          </div>
        )}

        <!-- Article Content -->
        <article class="px-6 lg:px-12 pb-16">
          <div class="container mx-auto max-w-4xl">
            <div class="prose prose-lg max-w-none prose-headings:font-black prose-headings:text-black prose-a:text-swiss-orange prose-a:no-underline hover:prose-a:underline prose-strong:text-black prose-blockquote:border-l-swiss-orange prose-blockquote:bg-gray-50 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:border-2 prose-blockquote:border-black prose-blockquote:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]" set:html={article.content} />
          </div>
        </article>

        <!-- Author Box -->
        <section class="px-6 lg:px-12 pb-16">
          <div class="container mx-auto max-w-4xl">
            <div class="bg-gray-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
              <div class="flex items-start gap-6">
                <div class="w-20 h-20 bg-swiss-orange border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] flex items-center justify-center flex-shrink-0">
                  <span class="text-2xl font-black text-white">
                    {(article.author || 'S')[0]}
                  </span>
                </div>
                <div>
                  <h3 class="text-xl font-black mb-2">{article.author || 'Synclaro Team'}</h3>
                  <p class="text-gray-600">
                    Experten für KI-Integration und Workflow-Automatisierung. Wir helfen Unternehmen, das volle Potenzial von künstlicher Intelligenz zu nutzen.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Related Articles -->
        {relatedArticles.length > 0 && (
          <section class="px-6 lg:px-12 pb-20 bg-gray-50 py-16">
            <div class="container mx-auto max-w-6xl">
              <h2 class="text-3xl font-black mb-8">Weitere Artikel</h2>
              <div class="grid md:grid-cols-3 gap-8">
                {relatedArticles.map((related) => (
                  <a href={`/blog/${related.slug}`} class="group">
                    <article class="h-full bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200 overflow-hidden">
                      {related.featured_image && (
                        <div class="h-40 overflow-hidden border-b-2 border-black">
                          <img
                            src={related.featured_image}
                            alt={related.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          />
                        </div>
                      )}
                      <div class="p-6">
                        <h3 class="font-black text-lg mb-2 group-hover:text-swiss-orange transition-colors">
                          {related.title}
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-2">
                          {related.excerpt}
                        </p>
                      </div>
                    </article>
                  </a>
                ))}
              </div>
            </div>
          </section>
        )}

        <!-- CTA Section -->
        <section class="py-20 px-6 lg:px-12 bg-swiss-orange">
          <div class="container mx-auto max-w-4xl text-center">
            <h2 class="text-4xl lg:text-5xl font-black text-white mb-6">
              Bereit für KI in Ihrem Unternehmen?
            </h2>
            <p class="text-xl text-white/90 mb-8">
              Lassen Sie uns gemeinsam besprechen, wie KI Ihre Prozesse optimieren kann.
            </p>
            <a
              href="/termin"
              class="inline-block bg-black text-white font-bold px-8 py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(255,255,255,0.3)] hover:shadow-[6px_6px_0px_0px_rgba(255,255,255,0.3)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
            >
              Kostenloses Erstgespräch buchen
            </a>
          </div>
        </section>
      </>
    )}
  </div>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    margin-top: 2em;
    margin-bottom: 1em;
  }

  .prose :where(h3):not(:where([class~="not-prose"] *)) {
    margin-top: 1.5em;
    margin-bottom: 0.75em;
  }

  .prose :where(p):not(:where([class~="not-prose"] *)) {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .prose :where(ul):not(:where([class~="not-prose"] *)) {
    list-style-type: disc;
    padding-left: 1.5em;
  }

  .prose :where(ol):not(:where([class~="not-prose"] *)) {
    list-style-type: decimal;
    padding-left: 1.5em;
  }

  .prose :where(li):not(:where([class~="not-prose"] *)) {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
</style>
