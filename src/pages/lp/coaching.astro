        <!-- Text -->
        <div class="order-2 md:order-1">
          <div class="inline-flex items-center gap-2 bg-gray-900 text-white px-4 py-1.5 text-xs font-medium uppercase tracking-wider rounded-full mb-5">
            <span class="relative w-2 h-2 bg-orange-500 rounded-full pulse-ring"></span>
            Nächster Start: Januar 2025
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black leading-[1.1] tracking-tight mb-5">
            Werde zum<br/><span class="gradient-text">KI-Profi</span> in 6 Monaten
