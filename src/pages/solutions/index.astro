---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "KI-Lösungen für Ihr Business | Synclaro Solutions";
const description = "Done-for-You KI-Services: Automatisierung, Chatbots, Datenanalyse. Wir setzen Ihre KI-Projekte um.";

const services = [
  {
    title: "KI-Automatisierung",
    description: "Automatisieren Sie wiederkehrende Prozesse mit intelligenten Workflows. Von der Dokumentenverarbeitung bis zur E-Mail-Automation.",
    features: ["Workflow-Automatisierung", "Dokumentenverarbeitung", "E-Mail-Automation"]
  },
  {
    title: "Custom Chatbots",
    description: "Intelligente Chatbots für Kundenservice, Lead-Generierung oder interne Prozesse. Trainiert auf Ihre Daten und Prozesse.",
    features: ["Kundenservice-Bots", "Lead-Generierung", "Interne Assistenten"]
  },
  {
    title: "Datenanalyse & BI",
    description: "Nutzen Sie Ihre Daten effektiv. KI-gestützte Analysen, Dashboards und automatisierte Reports.",
    features: ["Predictive Analytics", "Automatisierte Reports", "Custom Dashboards"]
  },
  {
    title: "Integration & APIs",
    description: "Verbinden Sie Ihre bestehenden Systeme mit KI-Funktionalitäten. Nahtlose Integration in Ihre IT-Landschaft.",
    features: ["API-Entwicklung", "System-Integration", "Custom Connectors"]
  }
];

const process = [
  { step: 1, title: "Scoping", description: "Kostenlose Analyse Ihrer Anforderungen" },
  { step: 2, title: "Konzept", description: "Technische Lösung und Kostenvoranschlag" },
  { step: 3, title: "Umsetzung", description: "Entwicklung und iterative Abstimmung" },
  { step: 4, title: "Go-Live", description: "Deployment und Übergabe" }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] opacity-0 animate-[fade-in-up_0.6s_ease-out_0.1s_forwards]">
            Done-for-You Services
          </span>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6 opacity-0 animate-[fade-in-up_0.6s_ease-out_0.2s_forwards]">
            Wir setzen Ihre <span class="text-swiss-orange">KI-Projekte</span> um
          </h1>

          <p class="text-xl text-gray-600 mb-8 opacity-0 animate-[fade-in-up_0.6s_ease-out_0.3s_forwards]">
            Von der Konzeption bis zum Go-Live: Wir entwickeln maßgeschneiderte KI-Lösungen für Ihr Unternehmen. Sie definieren das Ziel, wir kümmern uns um die Umsetzung.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a
              href="/solutions/beratung"
              class="group relative inline-flex items-center justify-center bg-gradient-to-r from-swiss-orange to-orange-600 text-white px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-swiss-orange/25 hover:shadow-xl hover:shadow-swiss-orange/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden"
            >
              <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12"></div>
              <span class="relative flex items-center gap-2">
                Scoping-Gespräch vereinbaren
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </span>
            </a>
            <a
              href="/solutions/referenzen"
              class="group relative inline-flex items-center justify-center bg-gradient-to-r from-gray-50 to-gray-100 text-black px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-gray-300/25 hover:shadow-xl hover:shadow-gray-300/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden border border-gray-200"
            >
              <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/50 to-transparent skew-x-12"></div>
              <span class="relative">Referenzen ansehen</span>
            </a>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-6">
          <div class="reveal bg-gray-50 border-2 border-black p-6 text-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <div class="text-4xl font-black text-swiss-orange mb-2">50+</div>
            <div class="text-sm text-gray-600">Projekte umgesetzt</div>
          </div>
          <div class="reveal bg-gray-50 border-2 border-black p-6 text-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <div class="text-4xl font-black text-swiss-orange mb-2">100%</div>
            <div class="text-sm text-gray-600">Transparenz</div>
          </div>
          <div class="reveal bg-gray-50 border-2 border-black p-6 text-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <div class="text-4xl font-black text-swiss-orange mb-2">2-8</div>
            <div class="text-sm text-gray-600">Wochen Projektdauer</div>
          </div>
          <div class="reveal bg-gray-50 border-2 border-black p-6 text-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <div class="text-4xl font-black text-swiss-orange mb-2">∞</div>
            <div class="text-sm text-gray-600">Support nach Go-Live</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="reveal text-3xl sm:text-4xl font-black mb-4">
          Unsere <span class="text-swiss-orange">Leistungen</span>
        </h2>
        <p class="reveal text-xl text-gray-600 max-w-3xl mx-auto">
          Maßgeschneiderte KI-Lösungen für Ihre individuellen Anforderungen
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="reveal bg-white border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <h3 class="text-2xl font-black mb-4">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.description}</p>
            <div class="flex flex-wrap gap-2">
              {service.features.map((feature) => (
                <span class="px-3 py-1 bg-swiss-orange/10 border border-swiss-orange/30 text-xs text-swiss-orange font-medium">
                  {feature}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="py-20 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-16">
        <h2 class="reveal text-3xl sm:text-4xl font-black mb-4">
          Unser <span class="text-swiss-orange">Prozess</span>
        </h2>
        <p class="reveal text-xl text-gray-600 max-w-3xl mx-auto">
          Transparent und strukturiert – vom ersten Gespräch bis zum Go-Live
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-6">
        {process.map((step) => (
          <div class="relative">
            <div class="reveal bg-gray-50 border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
              <div class="w-12 h-12 bg-swiss-orange text-white font-black text-xl flex items-center justify-center border-2 border-black mb-4">
                {step.step}
              </div>
              <h3 class="text-xl font-black mb-2">{step.title}</h3>
              <p class="text-gray-600 text-sm">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-4xl text-center">
      <div class="reveal bg-white border-2 border-black p-12 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
        <h2 class="text-3xl sm:text-4xl font-black mb-6">
          Bereit für Ihr <span class="text-swiss-orange">KI-Projekt</span>?
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Lassen Sie uns in einem kostenlosen Scoping-Gespräch Ihre Anforderungen besprechen. Wir analysieren Ihr Projekt und geben Ihnen eine realistische Einschätzung.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/solutions/beratung"
            class="group relative inline-flex items-center justify-center bg-gradient-to-r from-swiss-orange to-orange-600 text-white px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-swiss-orange/25 hover:shadow-xl hover:shadow-swiss-orange/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden"
          >
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12"></div>
            <span class="relative flex items-center gap-2">
              Scoping-Gespräch vereinbaren
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
          <a
            href="tel:+4916099471052"
            class="group relative inline-flex items-center justify-center bg-gradient-to-r from-gray-50 to-gray-100 text-black px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-gray-300/25 hover:shadow-xl hover:shadow-gray-300/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden border border-gray-200"
          >
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/50 to-transparent skew-x-12"></div>
            <span class="relative flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +49 160 99471052
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
