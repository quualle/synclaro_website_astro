---
import '../../styles/global.css';
import LPUserBehaviorTracker from '../../components/LPUserBehaviorTracker';

const title = "Executive KI-Mastermind | Synclaro Academy";
const description = "Für Geschäftsführer: KI strategisch verstehen und delegieren. 6 Monate Mastermind mit Top-Entscheidern.";

// Testimonials - fokussiert auf Führungskräfte/GFs
const testimonials = [
  {
    name: 'Sara Wietritschowski',
    role: 'Leiterin Familienbetrieb',
    quote: 'Nach 50 Stunden Coaching mit Marco habe ich endlich jemanden gefunden, der mich genau da abholt, wo ich stehe.',
    initials: 'SW',
  },
  {
    name: 'Philip Kempter',
    role: 'Selbstständiger Berater',
    quote: 'Das Coaching hat mir ermöglicht, eigene KI-Automatisierungen zu bauen, die mir täglich Stunden sparen.',
    initials: 'PK',
  },
  {
    name: 'Evelyn Biesinger',
    role: 'Familienbetrieb Handwerk & Coaching',
    quote: 'Jetzt habe ich einen guten Überblick über die Möglichkeiten, kann komplexere Tools anwenden und baue sogar eigene Programme.',
    initials: 'EB',
  },
];

// Mastermind Ablauf
const mastermindSteps = [
  { num: '01', title: 'Kick-off & Assessment', desc: 'Wo steht dein Unternehmen? Welche KI-Potenziale gibt es?' },
  { num: '02', title: 'Monatliche Mastermind', desc: '6 Monate, exklusive Runde mit max. 6 Geschäftsführern' },
  { num: '03', title: 'Strategische Roadmap', desc: 'Konkrete Implementierungspläne für dein Team' },
  { num: '04', title: '1:1 Sparring', desc: 'Individuelle Sessions für deine spezifischen Herausforderungen' },
];

// Problem icons (SVG paths)
const problemIcons = [
  // Target/Strategy icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  // Users/Team icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  // Trending up icon
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />`,
];
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://synclaro.de/lp/mastermind" />
  </head>

  <body class="min-h-screen bg-white text-gray-900">

    <!-- Minimal Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-black tracking-tight text-gray-900">
          SYN<span class="text-swiss-orange">C</span>LARO
        </a>
        <a
          href="#bewerbung"
          class="bg-swiss-orange text-white px-6 py-2.5 font-bold border-2 border-swiss-orange hover:bg-white hover:text-swiss-orange transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Jetzt bewerben
        </a>
      </nav>
    </header>

    <!-- HERO SECTION -->
    <section data-section-id="hero" data-section-name="Hero" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <!-- Animated Grid Background -->
      <div class="absolute inset-0 opacity-20" style="background-image: linear-gradient(rgba(255,79,0,0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(255,79,0,0.2) 1px, transparent 1px); background-size: 60px 60px;"></div>

      <!-- Gradient Orbs -->
      <div class="absolute top-1/4 right-0 w-[600px] h-[600px] bg-gradient-to-br from-swiss-orange/20 to-transparent rounded-full blur-3xl translate-x-1/3 animate-pulse-slow"></div>
      <div class="absolute bottom-1/4 left-0 w-[500px] h-[500px] bg-gradient-to-tr from-orange-500/10 to-transparent rounded-full blur-3xl -translate-x-1/3 animate-pulse-slower"></div>

      <div class="relative z-10 text-center px-4 max-w-5xl mx-auto py-20">
        <!-- Badge -->
        <div class="mb-8 opacity-0 animate-slide-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
          <span class="inline-flex items-center gap-3 px-6 py-3 bg-gray-800 border-2 border-swiss-orange/50 text-swiss-orange font-mono text-sm uppercase tracking-widest shadow-lg">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-swiss-orange opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-swiss-orange"></span>
            </span>
            EXECUTIVE MASTERMIND
          </span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.9] mb-8">
          <span class="block text-white opacity-0 animate-slide-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">KI verstehen.</span>
          <span class="block relative opacity-0 animate-slide-up" style="animation-delay: 0.3s; animation-fill-mode: forwards;">
            <span class="bg-gradient-to-r from-swiss-orange via-orange-400 to-swiss-orange bg-clip-text text-transparent animate-gradient-x">
              Delegieren.
            </span>
            <svg class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-48 h-3 text-swiss-orange/30" viewBox="0 0 200 12" fill="currentColor">
              <path d="M0,6 Q50,0 100,6 T200,6" stroke="currentColor" stroke-width="3" fill="none" class="animate-draw-line"/>
            </svg>
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto mb-10 opacity-0 animate-slide-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          Für Geschäftsführer, die KI strategisch einsetzen wollen –
          <span class="text-white font-bold relative">
            ohne selbst zum Entwickler zu werden.
            <span class="absolute bottom-0 left-0 w-full h-1 bg-swiss-orange/30"></span>
          </span>
        </p>

        <!-- Value Props -->
        <div class="flex flex-wrap justify-center gap-8 mb-12 opacity-0 animate-slide-up" style="animation-delay: 0.5s; animation-fill-mode: forwards;">
          <div class="flex items-center gap-3 text-gray-400 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/20 flex items-center justify-center group-hover:bg-swiss-orange/30 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="font-medium text-gray-300">6 Monate Programm</span>
          </div>
          <div class="flex items-center gap-3 text-gray-400 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/20 flex items-center justify-center group-hover:bg-swiss-orange/30 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <span class="font-medium text-gray-300">Max. 6 Teilnehmer</span>
          </div>
          <div class="flex items-center gap-3 text-gray-400 group">
            <div class="w-10 h-10 rounded-full bg-swiss-orange/20 flex items-center justify-center group-hover:bg-swiss-orange/30 transition-colors">
              <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <span class="font-medium text-gray-300">Strategischer Fokus</span>
          </div>
        </div>

        <!-- CTA -->
        <div class="opacity-0 animate-slide-up" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
          <a
            href="#bewerbung"
            class="group inline-flex items-center gap-3 bg-swiss-orange text-white font-bold px-10 py-5 text-xl border-2 border-swiss-orange shadow-[0_4px_20px_rgba(255,79,0,0.4)] hover:shadow-[0_8px_40px_rgba(255,79,0,0.5)] hover:bg-white hover:text-swiss-orange hover:-translate-y-1 transition-all duration-300"
          >
            Jetzt bewerben
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Gruppen-Coaching Breakout Link -->
        <div class="mt-8 opacity-0 animate-slide-up" style="animation-delay: 0.7s; animation-fill-mode: forwards;">
          <a
            href="/lp/coaching"
            class="inline-flex items-center gap-2 text-gray-500 hover:text-swiss-orange transition-colors text-sm"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
            Du willst selbst alles können und hands-on lernen?
            <span class="font-medium underline">Zum Gruppen-Coaching</span>
          </a>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 1s; animation-fill-mode: forwards;">
          <div class="w-6 h-10 border-2 border-gray-600 rounded-full flex items-start justify-center p-1">
            <div class="w-1.5 h-3 bg-swiss-orange rounded-full animate-scroll-indicator"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- PROBLEM SECTION -->
    <section data-section-id="problem" data-section-name="Problem" class="py-24 bg-white relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>

      <div class="container mx-auto px-4 md:px-8 max-w-6xl">
        <div class="text-center mb-16 scroll-reveal">
          <span class="inline-block px-4 py-2 bg-gray-100 border-2 border-gray-200 text-gray-600 font-mono text-xs uppercase tracking-widest mb-6">
            Das Problem
          </span>
          <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
            Als GF fehlt dir der <span class="text-swiss-orange">strategische Durchblick</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.1s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[0]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">Keine Zeit für Details</h3>
            <p class="text-gray-600">Du brauchst strategisches Verständnis – nicht 100 Stunden Tutorials über Prompt Engineering.</p>
          </div>

          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.2s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[1]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">Dein Team braucht Führung</h3>
            <p class="text-gray-600">Du kannst nicht delegieren, was du nicht verstehst. Aber du musst auch nicht alles selbst machen.</p>
          </div>

          <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 hover:border-swiss-orange/50 hover:shadow-xl transition-all duration-500 group" style="animation-delay: 0.3s;">
            <div class="w-16 h-16 bg-swiss-orange/10 border-2 border-swiss-orange/30 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-swiss-orange/20 transition-all duration-300">
              <svg class="w-8 h-8 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={problemIcons[2]} />
            </div>
            <h3 class="text-xl font-black mb-3 text-gray-900">KI verändert alles</h3>
            <p class="text-gray-600">Deine Konkurrenz setzt bereits KI ein. Wer jetzt nicht handelt, verliert den Anschluss.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- SOLUTION SECTION - Mastermind Details -->
    <section data-section-id="solution" data-section-name="Die Mastermind" class="py-24 bg-gray-50 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-20 right-10 w-40 h-40 border-2 border-swiss-orange/10 rounded-full animate-float-slow"></div>
      <div class="absolute bottom-20 left-10 w-24 h-24 bg-swiss-orange/5 rotate-45 animate-float-medium"></div>

      <div class="container mx-auto px-4 md:px-8 max-w-6xl relative z-10">
        <div class="text-center mb-16 scroll-reveal">
          <span class="inline-block px-4 py-2 bg-white border-2 border-swiss-orange/30 text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-sm">
            Die Mastermind
          </span>
          <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
            Strategisches <span class="text-swiss-orange">KI-Know-how</span> für Entscheider
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            6 Monate exklusiver Austausch mit maximal 6 anderen Geschäftsführern. Strategisch denken, smart delegieren.
          </p>
        </div>

        <!-- Main Content Card -->
        <div class="scroll-reveal bg-white border-2 border-gray-200 p-8 md:p-12 shadow-lg mb-12">
          <!-- Der Ablauf -->
          <h3 class="text-2xl font-black text-gray-900 mb-8 text-center">So läuft die Mastermind ab</h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            {mastermindSteps.map((step) => (
              <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-6 hover:border-swiss-orange/50 hover:shadow-lg transition-all duration-300 group">
                <div class="w-12 h-12 bg-swiss-orange/10 border-2 border-swiss-orange flex items-center justify-center text-swiss-orange font-black text-lg mb-4 group-hover:bg-swiss-orange group-hover:text-white transition-colors">
                  {step.num}
                </div>
                <h4 class="font-bold text-gray-900 mb-2">{step.title}</h4>
                <p class="text-sm text-gray-600">{step.desc}</p>
              </div>
            ))}
          </div>

          <!-- Was du bekommst -->
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-50 border-2 border-gray-200 p-6">
              <h4 class="font-black text-gray-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Das bekommst du
              </h4>
              <ul class="space-y-3 text-gray-700">
                <li class="flex items-start gap-3">
                  <span class="text-swiss-orange font-bold">+</span>
                  Monatliche Mastermind-Sessions (3h)
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-swiss-orange font-bold">+</span>
                  Individuelle 1:1 Sparring-Calls
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-swiss-orange font-bold">+</span>
                  KI-Strategie-Roadmap für dein Unternehmen
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-swiss-orange font-bold">+</span>
                  Exklusives Netzwerk mit anderen GFs
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-swiss-orange font-bold">+</span>
                  Direkte Slack-Kommunikation
                </li>
              </ul>
            </div>

            <div class="bg-swiss-orange/5 border-2 border-swiss-orange/30 p-6">
              <h4 class="font-black text-gray-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-swiss-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                Das Ergebnis
              </h4>
              <ul class="space-y-3 text-gray-700">
                <li class="flex items-start gap-3">
                  <span class="text-green-600 font-bold">&#10003;</span>
                  Du verstehst, welche KI-Projekte Sinn machen
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-green-600 font-bold">&#10003;</span>
                  Du kannst KI-Aufgaben kompetent delegieren
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-green-600 font-bold">&#10003;</span>
                  Du erkennst Bullshit vs. echte Opportunitäten
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-green-600 font-bold">&#10003;</span>
                  Du hast eine klare Roadmap für die nächsten 12 Monate
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="text-center mt-12 scroll-reveal">
          <a
            href="#bewerbung"
            class="group inline-flex items-center gap-3 bg-swiss-orange text-white font-bold px-10 py-5 text-xl border-2 border-swiss-orange shadow-[0_4px_20px_rgba(255,79,0,0.3)] hover:shadow-[0_8px_40px_rgba(255,79,0,0.4)] hover:bg-white hover:text-swiss-orange hover:-translate-y-1 transition-all duration-300"
          >
            Jetzt bewerben
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- FOR WHOM SECTION -->
    <section data-section-id="for-whom" data-section-name="Für wen" class="py-24 bg-white relative">
      <div class="container mx-auto px-4 md:px-8 max-w-5xl">
        <div class="text-center mb-16 scroll-reveal">
          <span class="inline-block px-4 py-2 bg-gray-100 border-2 border-gray-200 text-gray-600 font-mono text-xs uppercase tracking-widest mb-6">
            Für wen ist das?
          </span>
          <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
            Perfekt für <span class="text-swiss-orange">Entscheider</span>
          </h2>
        </div>

        <div class="scroll-reveal bg-gray-50 border-2 border-gray-200 p-8 md:p-12 shadow-lg">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Das bist du -->
            <div>
              <h3 class="text-xl font-black text-green-600 mb-6 flex items-center gap-3">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Das bist du
              </h3>
              <ul class="space-y-4">
                <li class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700">Du bist <span class="font-bold text-gray-900">Geschäftsführer oder C-Level</span></span>
                </li>
                <li class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700">Du hast ein <span class="font-bold text-gray-900">Team, das umsetzt</span></span>
                </li>
                <li class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700">Du willst <span class="font-bold text-gray-900">strategisch verstehen</span>, nicht selbst coden</span>
                </li>
                <li class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700">Du schätzt <span class="font-bold text-gray-900">exklusiven Austausch</span> auf Augenhöhe</span>
