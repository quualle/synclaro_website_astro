---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Termin buchen - Synclaro">
  <div class="min-h-screen bg-white pt-12 pb-20">
    <!-- Hero Section -->
    <section class="relative py-16">
      <div class="container mx-auto max-w-6xl px-6 lg:px-12">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] opacity-0 animate-[fade-in-up_0.6s_ease-out_0.1s_forwards]">
            TERMINBUCHUNG
          </span>

          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black tracking-tight mb-6 opacity-0 animate-[fade-in-up_0.6s_ease-out_0.2s_forwards]">
            Wählen Sie Ihren <span class="text-swiss-orange">Wunschtermin</span>
          </h1>

          <p class="text-xl text-gray-600 max-w-3xl mx-auto opacity-0 animate-[fade-in-up_0.6s_ease-out_0.3s_forwards]">
            15 Minuten kostenloses Erstgespräch über Ihre KI-Möglichkeiten
          </p>
        </div>

        <!-- Cal.com Embed Container -->
        <div class="reveal bg-white border-2 border-black p-2 sm:p-8 max-w-4xl mx-auto shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all duration-300 hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1">
          <div class="h-[600px] sm:h-[700px]" id="cal-embed">
            <!-- Cal.com wird hier eingebettet -->
          </div>
        </div>

        <!-- Alternative Contact -->
        <div class="reveal mt-12 text-center">
          <p class="text-gray-600 mb-4">
            Passt kein Termin? Schreiben Sie mir gerne direkt:
          </p>
          <a
            href="mailto:marcoheer@synclaro.de"
            class="inline-flex items-center text-swiss-orange hover:text-black transition-all duration-300 font-semibold hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            marcoheer@synclaro.de
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<script is:inline>
  // Cal.com embed script
  (function (C, A, L) {
    var p = function (a, ar) {
      a.q.push(ar);
    };
    var d = C.document;
    C.Cal =
      C.Cal ||
      function () {
        var cal = C.Cal;
        var ar = arguments;
        if (!cal.loaded) {
          cal.ns = {};
          cal.q = cal.q || [];
          d.head.appendChild(d.createElement("script")).src = A;
          cal.loaded = true;
        }
        if (ar[0] === L) {
          var api = function () {
            p(api, arguments);
          };
          var namespace = ar[1];
          api.q = api.q || [];
          typeof namespace === "string"
            ? (cal.ns[namespace] = api) && p(api, ar)
            : p(cal, ar);
          return;
        }
        p(cal, ar);
      };
  })(window, "https://app.cal.com/embed/embed.js", "init");

  window.Cal("init", { origin: "https://cal.com" });

  window.Cal("inline", {
    elementOrSelector: "#cal-embed",
    calLink: "marcoheer/erstgesprach",
    config: {
      theme: "light",
      layout: "month_view",
    }
  });

  window.Cal("ui", {
    theme: "light",
    styles: { branding: { brandColor: "#FF4F00" } },
    hideEventTypeDetails: false,
    layout: "month_view"
  });
</script>
