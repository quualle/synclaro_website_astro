        </div>

        <!-- Video -->
        <div class="order-1 md:order-2">
          <div class="relative aspect-video bg-gray-900 rounded-2xl overflow-hidden shadow-2xl shadow-gray-900/20 ring-1 ring-gray-900/5">
            <video autoplay muted loop playsinline class="w-full h-full object-cover">
              <source src="/groupcoaching.mp4" type="video/mp4" />
            </video>
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/60 via-transparent to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4 flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-white/20 backdrop-blur flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
              <div>
                <p class="text-white text-sm font-medium">Live aus dem Gruppen-Coaching</p>
                <p class="text-white/60 text-xs">48+ Sessions pro Durchgang</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="mt-10 pt-8 border-t border-gray-200">
        <div class="flex flex-wrap items-center justify-center gap-6 md:gap-10">
          {testimonials.map((t) => (
            <div class="flex items-center gap-3 group">
              <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center text-white font-semibold text-sm shadow-lg shadow-orange-500/25">
                {t.initials}
              </div>
              <div>
                <span class="font-semibold text-gray-900 text-sm">{t.name}</span>
                <span class="text-gray-400 text-sm hidden sm:inline"> · {t.role}</span>
              </div>
            </div>
          ))}
          <div class="text-sm text-gray-400 font-medium">+15 weitere</div>
        </div>
      </div>
    </div>
  </section>

  <!-- PROBLEM -->
  <section class="py-10 md:py-14 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-8">
        <div class="accent-line mx-auto mb-4"></div>
        <h2 class="text-2xl md:text-3xl font-black tracking-tight">
          KI verändert alles – <span class="gradient-text">aber wie fängst du an?</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-4">
        <div class="bg-gray-50 p-5 rounded-xl border border-gray-100 card-hover">
          <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>
          </div>
          <h3 class="font-bold text-gray-900 mb-2">Überfordert von Tools</h3>
          <p class="text-sm text-gray-600 leading-relaxed">ChatGPT, Claude, Midjourney, n8n... Welche brauchst du wirklich?</p>
        </div>
        <div class="bg-gray-50 p-5 rounded-xl border border-gray-100 card-hover">
          <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
