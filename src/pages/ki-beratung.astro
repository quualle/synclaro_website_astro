<script>
  const form = document.getElementById('ki-beratung-form') as HTMLFormElement;
  const formStatus = document.getElementById('form-status');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitBtn.textContent;
    submitBtn.textContent = 'Wird gesendet...';
    submitBtn.disabled = true;

    const formData = new FormData(form);

    try {
      const response = await fetch('/api/leads', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name: formData.get('name'),
          email: formData.get('email'),
          phone: formData.get('phone'),
          campaign: 'ki-beratung',
          session_id: crypto.randomUUID(),
          quickcheck_data: {
            source: 'ki-beratung',
            message: 'Anfrage für kostenloses Erstgespräch (KI-Beratung)'
          }
        }),
      });

      if (!response.ok) {
        throw new Error('Failed to submit form');
      }

      if (formStatus) {
        formStatus.textContent = 'Vielen Dank! Wir leiten Sie gleich weiter...';
        formStatus.className = 'text-center text-green-500 font-medium';
        formStatus.classList.remove('hidden');
      }

      setTimeout(() => {
        window.location.href = '/danke?source=ki-beratung';
      }, 1000);
    } catch (error) {
      console.error('Error submitting form:', error);
      if (formStatus) {
        formStatus.textContent = 'Ein Fehler ist aufgetreten. Bitte versuchen Sie es erneut.';
        formStatus.className = 'text-center text-red-500 font-medium';
        formStatus.classList.remove('hidden');
      }
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;
    }
  });
</script>
