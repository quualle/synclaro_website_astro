// Check authentication
const sessionCookie = Astro.cookies.get('intern_session');
if (!sessionCookie?.value) {
  return Astro.redirect('/intern');
}

const tools = [
  {
    name: 'CRM',
    description: 'Kundenverwaltung, Transkript-Analyse, Meeting-Briefings',
