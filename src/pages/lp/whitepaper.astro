---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "KI-Whitepaper herunterladen | Synclaro";
const description = "Unser kostenloses Whitepaper: KI-Strategien für den Mittelstand. 25 Seiten Expertenwissen.";

const chapters = [
  'Der aktuelle Stand der KI-Technologie',
  'KI-Einsatzgebiete im Mittelstand',
  'Kosten-Nutzen-Analyse von KI-Projekten',
  'Risiken und wie Sie sie minimieren',
  'Ihr 5-Schritte-Plan zur KI-Integration'
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            WHITEPAPER
          </span>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
            KI-Strategien für den <span class="text-swiss-orange">Mittelstand</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            25 Seiten Expertenwissen: Alles, was Sie über KI im Mittelstand
            wissen müssen. Kostenlos und ohne Verpflichtungen.
          </p>

          <div class="bg-gray-50 border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] mb-8">
            <h3 class="font-black mb-4">Inhalte:</h3>
            <ul class="space-y-2">
              {chapters.map((chapter, idx) => (
                <li class="flex items-center gap-2">
                  <span class="w-6 h-6 bg-swiss-orange text-white text-xs font-bold flex items-center justify-center border border-black">
                    {idx + 1}
                  </span>
                  <span class="text-sm">{chapter}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Lead Capture Form -->
        <div class="bg-gray-50 border-2 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-2xl font-black mb-6">Whitepaper herunterladen</h2>

          <form action="/danke?source=whitepaper" method="GET" class="space-y-4">
            <div>
              <label class="block text-sm font-bold mb-2">Name *</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Name"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">E-Mail *</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="ihre@email.de"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">Unternehmen</label>
              <input
                type="text"
                name="company"
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Unternehmen"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-swiss-orange text-white font-bold py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
            >
              Kostenlos herunterladen
            </button>

            <p class="text-xs text-gray-500 text-center">
              Kein Spam. Sie können sich jederzeit abmelden.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
