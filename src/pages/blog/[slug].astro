---
import MainLayout from '../../layouts/MainLayout.astro';
import { createClient } from '@supabase/supabase-js';
import { marked } from 'marked';

// Initialize Supabase client
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || 'https://ouqhysemcldamthpuqqq.supabase.co';
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im91cWh5c2VtY2xkYW10aHB1cXFxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzUyMjk5MjEsImV4cCI6MjA1MDgwNTkyMX0.xR8KGGKWH2JLdo6k3HK-kK3G1TrmXHLrfZjJkeKMFig';

const supabase = createClient(supabaseUrl, supabaseAnonKey);

// Get slug from URL
const { slug } = Astro.params;

// Fetch article by slug
let article: any = null;
let error = null;

try {
  const { data, error: fetchError } = await supabase
    .from('articles')
    .select('*')
    .eq('slug', slug)
    .eq('status', 'published')
    .single();

  if (fetchError) {
    if (fetchError.code === 'PGRST116') {
      // No rows returned - article not found
      return Astro.redirect('/blog');
    }
    console.error('Supabase error:', fetchError);
    error = fetchError.message;
  } else {
    article = data;
  }
} catch (e) {
  console.error('Error fetching article:', e);
  error = 'Fehler beim Laden des Artikels';
}

// If no article found, redirect to blog index
if (!article && !error) {
  return Astro.redirect('/blog');
}

// Helper function to format date
function formatDate(dateString: string | null) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get related articles
let relatedArticles: any[] = [];
if (article && article.tags && article.tags.length > 0) {
  try {
    const { data: related } = await supabase
      .from('articles')
      .select('id, title, slug, meta_description, published_at, reading_time')
      .eq('status', 'published')
      .neq('id', article.id)
      .limit(3);

    relatedArticles = related || [];
  } catch (e) {
    console.error('Error fetching related articles:', e);
  }
}
---

<MainLayout title={article ? `${article.title} | Synclaro Blog` : 'Artikel nicht gefunden | Synclaro Blog'}>
  <div class="min-h-screen bg-white">
    {error && (
      <div class="pt-32 pb-20 px-6">
        <div class="container mx-auto max-w-4xl text-center">
          <div class="bg-red-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <p class="text-red-600 font-bold text-xl">{error}</p>
            <a href="/blog" class="inline-block mt-4 text-swiss-orange hover:text-black font-bold">
              ← Zurück zum Blog
            </a>
          </div>
        </div>
      </div>
    )}

    {article && (
      <>
        <!-- Article Header -->
        <header class="pt-24 pb-12 px-6 lg:px-12">
          <div class="container mx-auto max-w-4xl">
            <!-- Back link -->
            <a href="/blog" class="inline-flex items-center text-swiss-orange hover:text-black font-bold mb-8 transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
              </svg>
              Zurück zum Blog
            </a>

            <!-- Category/Topic -->
            {article.topic && (
              <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                {article.topic}
              </span>
            )}

            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
              {article.title}
            </h1>

            <!-- Meta -->
            <div class="flex flex-wrap items-center gap-6 text-gray-600 mb-8">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="font-medium">{article.author || 'Synclaro Team'}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(article.published_at || article.created_at)}</span>
              </div>
              {article.reading_time && (
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{article.reading_time} Min. Lesezeit</span>
                </div>
              )}
            </div>

            <!-- Tags -->
            {article.tags && article.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {article.tags.map((tag: string) => (
                  <span class="px-3 py-1 bg-gray-100 border-2 border-black text-sm font-mono shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <!-- Hero Visual -->
        <div class="px-6 lg:px-12 mb-12">
          <div class="container mx-auto max-w-4xl">
            <div class="border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] overflow-hidden bg-gradient-to-br from-swiss-orange via-orange-500 to-orange-600 p-12 lg:p-16 relative">
              <!-- Decorative Elements -->
              <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
              <div class="absolute bottom-0 left-0 w-48 h-48 bg-black/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>

              <!-- Content -->
              <div class="relative z-10 text-center">
                <!-- Icon -->
                <div class="w-24 h-24 mx-auto mb-6 bg-white border-4 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] flex items-center justify-center">
                  <svg class="w-12 h-12 text-swiss-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                </div>

                <!-- Category -->
                {article.category && (
                  <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm text-white font-mono text-xs uppercase tracking-widest mb-4">
                    {article.category}
                  </span>
                )}

                <!-- Reading Info -->
                <p class="text-white/90 text-lg font-medium">
                  {article.word_count ? `${article.word_count.toLocaleString('de-DE')} Wörter` : ''}
                  {article.word_count && article.reading_time ? ' · ' : ''}
                  {article.reading_time ? `${article.reading_time} Min. Lesezeit` : ''}
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Article Content -->
        <article class="px-6 lg:px-12 pb-16">
          <div class="container mx-auto max-w-4xl">
            <!-- Content Container with Border -->
            <div class="bg-white border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] p-8 lg:p-12">
              <div class="article-content" set:html={marked(article.content || '')} />
            </div>
          </div>
        </article>

        <!-- Author Box -->
        <section class="px-6 lg:px-12 pb-16">
          <div class="container mx-auto max-w-4xl">
            <div class="bg-gray-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
              <div class="flex items-start gap-6">
                <div class="w-20 h-20 bg-swiss-orange border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] flex items-center justify-center flex-shrink-0">
                  <span class="text-2xl font-black text-white">
                    {(article.author || 'S')[0]}
                  </span>
                </div>
                <div>
                  <h3 class="text-xl font-black mb-2">{article.author || 'Synclaro Team'}</h3>
                  <p class="text-gray-600">
                    Experten für KI-Integration und Workflow-Automatisierung. Wir helfen Unternehmen, das volle Potenzial von künstlicher Intelligenz zu nutzen.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Related Articles -->
        {relatedArticles.length > 0 && (
          <section class="px-6 lg:px-12 pb-20 bg-gray-50 py-16">
            <div class="container mx-auto max-w-6xl">
              <h2 class="text-3xl font-black mb-8">Weitere Artikel</h2>
              <div class="grid md:grid-cols-3 gap-8">
                {relatedArticles.map((related) => (
                  <a href={`/blog/${related.slug}`} class="group">
                    <article class="h-full bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200 overflow-hidden">
                      <div class="p-6">
                        <h3 class="font-black text-lg mb-2 group-hover:text-swiss-orange transition-colors">
                          {related.title}
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-2">
                          {related.meta_description}
                        </p>
                      </div>
                    </article>
                  </a>
                ))}
              </div>
            </div>
          </section>
        )}

        <!-- CTA Section -->
        <section class="py-20 px-6 lg:px-12 bg-swiss-orange">
          <div class="container mx-auto max-w-4xl text-center">
            <h2 class="text-4xl lg:text-5xl font-black text-white mb-6">
              Bereit für KI in Ihrem Unternehmen?
            </h2>
            <p class="text-xl text-white/90 mb-8">
              Lassen Sie uns gemeinsam besprechen, wie KI Ihre Prozesse optimieren kann.
            </p>
            <a
              href="/termin"
              class="inline-block bg-black text-white font-bold px-8 py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(255,255,255,0.3)] hover:shadow-[6px_6px_0px_0px_rgba(255,255,255,0.3)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
            >
              Kostenloses Erstgespräch buchen
            </a>
          </div>
        </section>
      </>
    )}
  </div>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* ============================================
     PROFESSIONAL ARTICLE STYLING
     ============================================ */

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #1a1a1a;
  }

  /* Headings - Clear Hierarchy */
  .article-content :where(h1):not(:where([class~="not-prose"] *)) {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 1.2;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: #000;
    letter-spacing: -0.02em;
  }

  .article-content :where(h2):not(:where([class~="not-prose"] *)) {
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.3;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: #000;
    padding-bottom: 0.75rem;
    border-bottom: 3px solid #f97316;
    letter-spacing: -0.01em;
  }

  .article-content :where(h3):not(:where([class~="not-prose"] *)) {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.4;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .article-content :where(h4):not(:where([class~="not-prose"] *)) {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.4;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #333;
  }

  /* Paragraphs */
  .article-content :where(p):not(:where([class~="not-prose"] *)) {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  /* First paragraph after heading - no top margin */
  .article-content :where(h2 + p, h3 + p, h4 + p):not(:where([class~="not-prose"] *)) {
    margin-top: 0;
  }

  /* Strong/Bold */
  .article-content :where(strong):not(:where([class~="not-prose"] *)) {
    font-weight: 700;
    color: #000;
  }

  /* Links */
  .article-content :where(a):not(:where([class~="not-prose"] *)) {
    color: #f97316;
    text-decoration: none;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .article-content :where(a):not(:where([class~="not-prose"] *)):hover {
    border-bottom-color: #f97316;
  }

  /* Lists */
  .article-content :where(ul):not(:where([class~="not-prose"] *)) {
    list-style-type: none;
    padding-left: 0;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .article-content :where(ul > li):not(:where([class~="not-prose"] *)) {
    position: relative;
    padding-left: 1.75rem;
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .article-content :where(ul > li):not(:where([class~="not-prose"] *))::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 8px;
    height: 8px;
    background-color: #f97316;
    border-radius: 0;
  }

  .article-content :where(ol):not(:where([class~="not-prose"] *)) {
    list-style-type: none;
    padding-left: 0;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    counter-reset: item;
  }

  .article-content :where(ol > li):not(:where([class~="not-prose"] *)) {
    position: relative;
    padding-left: 2.5rem;
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
    counter-increment: item;
  }

  .article-content :where(ol > li):not(:where([class~="not-prose"] *))::before {
    content: counter(item);
    position: absolute;
    left: 0;
    top: 0;
    width: 1.75rem;
    height: 1.75rem;
    background-color: #f97316;
    color: white;
    font-weight: 700;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #000;
  }

  /* Blockquotes */
  .article-content :where(blockquote):not(:where([class~="not-prose"] *)) {
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    background: linear-gradient(135deg, #fff7ed 0%, #ffedd5 100%);
    border: 2px solid #000;
    border-left: 6px solid #f97316;
    box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    font-style: italic;
    font-size: 1.125rem;
  }

  .article-content :where(blockquote p):not(:where([class~="not-prose"] *)) {
    margin: 0;
  }

  /* Code */
  .article-content :where(code):not(:where([class~="not-prose"] *)) {
    background-color: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 0;
    font-size: 0.9em;
    font-family: ui-monospace, monospace;
    border: 1px solid #e5e7eb;
  }

  .article-content :where(pre):not(:where([class~="not-prose"] *)) {
    background-color: #1a1a1a;
    color: #f3f4f6;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 2px solid #000;
    box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
  }

  .article-content :where(pre code):not(:where([class~="not-prose"] *)) {
    background: none;
    padding: 0;
    border: none;
    color: inherit;
  }

  /* Horizontal Rule */
  .article-content :where(hr):not(:where([class~="not-prose"] *)) {
    margin: 3rem 0;
    border: none;
    height: 4px;
    background: linear-gradient(90deg, #f97316 0%, #f97316 30%, #e5e7eb 30%, #e5e7eb 100%);
  }

  /* ============================================
     TABLE STYLING - EQUAL COLUMNS
     ============================================ */

  .article-content :where(table):not(:where([class~="not-prose"] *)) {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    border: 2px solid #000;
    box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    font-size: 0.95rem;
    table-layout: auto;
  }

  .article-content :where(thead):not(:where([class~="not-prose"] *)) {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  }

  .article-content :where(th):not(:where([class~="not-prose"] *)) {
    padding: 1rem 1.25rem;
    text-align: left;
    font-weight: 700;
    color: white;
    border: 2px solid #000;
    white-space: nowrap;
  }

  .article-content :where(td):not(:where([class~="not-prose"] *)) {
    padding: 1rem 1.25rem;
    border: 1px solid #d1d5db;
    vertical-align: top;
  }

  .article-content :where(tbody tr:nth-child(even)):not(:where([class~="not-prose"] *)) {
    background-color: #f9fafb;
  }

  .article-content :where(tbody tr):not(:where([class~="not-prose"] *)):hover {
    background-color: #fff7ed;
  }

  /* Make date columns narrower */
  .article-content :where(td:first-child, th:first-child):not(:where([class~="not-prose"] *)) {
    white-space: nowrap;
    width: auto;
  }

  /* Images in content */
  .article-content :where(img):not(:where([class~="not-prose"] *)) {
    margin: 2rem auto;
    border: 2px solid #000;
    box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    max-width: 100%;
    height: auto;
  }

  /* Figure/Caption */
  .article-content :where(figure):not(:where([class~="not-prose"] *)) {
    margin: 2rem 0;
  }

  .article-content :where(figcaption):not(:where([class~="not-prose"] *)) {
    text-align: center;
    font-size: 0.875rem;
    color: #6b7280;
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .article-content {
      font-size: 1rem;
    }

    .article-content :where(h1):not(:where([class~="not-prose"] *)) {
      font-size: 1.875rem;
    }

    .article-content :where(h2):not(:where([class~="not-prose"] *)) {
      font-size: 1.5rem;
    }

    .article-content :where(h3):not(:where([class~="not-prose"] *)) {
      font-size: 1.25rem;
    }

    .article-content :where(table):not(:where([class~="not-prose"] *)) {
      display: block;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .article-content :where(th, td):not(:where([class~="not-prose"] *)) {
      padding: 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>
