---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "Referenzen | Synclaro Solutions";
const description = "Erfolgreiche KI-Projekte aus verschiedenen Branchen. Erfahren Sie, wie wir Unternehmen bei der KI-Implementierung unterstützt haben.";

const projects = [
  {
    title: "Automatisierte Dokumentenverarbeitung",
    industry: "Finanzdienstleistung",
    description: "Entwicklung einer KI-Lösung zur automatischen Klassifizierung und Extraktion von Informationen aus Geschäftsdokumenten.",
    results: ["85% Zeitersparnis bei der Dokumentenverarbeitung", "Verarbeitung von 500+ Dokumenten täglich", "Integration in bestehendes DMS"],
    tags: ["OCR", "Dokumenten-KI", "Automatisierung"]
  },
  {
    title: "Intelligenter Kundenservice-Bot",
    industry: "E-Commerce",
    description: "Custom-Chatbot für den Kundenservice mit Anbindung an das bestehende CRM und Ticketing-System.",
    results: ["60% der Anfragen automatisch beantwortet", "24/7 Verfügbarkeit", "Reduktion der Wartezeiten um 70%"],
    tags: ["Chatbot", "CRM-Integration", "NLP"]
  },
  {
    title: "Predictive Maintenance System",
    industry: "Produktion",
    description: "KI-gestütztes System zur Vorhersage von Wartungsbedarf bei Produktionsmaschinen.",
    results: ["30% weniger ungeplante Ausfallzeiten", "Optimierte Wartungsplanung", "ROI innerhalb von 6 Monaten"],
    tags: ["Predictive Analytics", "IoT", "Machine Learning"]
  },
  {
    title: "Automatisierte Angebotserstellung",
    industry: "Handwerk",
    description: "KI-System zur automatischen Erstellung von Angeboten basierend auf Kundenanfragen und historischen Daten.",
    results: ["70% schnellere Angebotserstellung", "Konsistente Preiskalkulation", "Höhere Abschlussquote"],
    tags: ["Automatisierung", "Datenanalyse", "Process Mining"]
  }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          Referenzen
        </span>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
          Erfolgreiche <span class="text-swiss-orange">KI-Projekte</span>
        </h1>

        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Erfahren Sie, wie wir Unternehmen aus verschiedenen Branchen bei der erfolgreichen Implementierung von KI-Lösungen unterstützt haben.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="pb-20 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <div class="bg-gray-50 border-2 border-black p-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <div class="flex items-center justify-between mb-4">
              <span class="px-3 py-1 bg-swiss-orange/10 border border-swiss-orange/30 text-xs text-swiss-orange font-medium">
                {project.industry}
              </span>
            </div>

            <h3 class="text-2xl font-black mb-4">{project.title}</h3>
            <p class="text-gray-600 mb-6">{project.description}</p>

            <div class="mb-6">
              <h4 class="text-sm font-bold mb-3">Ergebnisse:</h4>
              <ul class="space-y-2">
                {project.results.map((result) => (
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm text-gray-600">{result}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-200">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-200 text-xs text-gray-600">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-4xl text-center">
      <div class="bg-white border-2 border-black p-12 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
        <h2 class="text-3xl sm:text-4xl font-black mb-6">
          Ihr Projekt könnte hier <span class="text-swiss-orange">stehen</span>
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Lassen Sie uns besprechen, wie wir auch Ihr Unternehmen mit maßgeschneiderten KI-Lösungen unterstützen können.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/solutions/beratung"
            class="group relative inline-flex items-center justify-center bg-gradient-to-r from-swiss-orange to-orange-600 text-white px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-swiss-orange/25 hover:shadow-xl hover:shadow-swiss-orange/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden"
          >
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12"></div>
            <span class="relative flex items-center gap-2">
              Projekt besprechen
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
          <a
            href="/solutions"
            class="group relative inline-flex items-center justify-center bg-gradient-to-r from-gray-50 to-gray-100 text-black px-6 sm:px-8 py-3 sm:py-4 font-bold text-sm sm:text-base rounded-lg shadow-lg shadow-gray-300/25 hover:shadow-xl hover:shadow-gray-300/40 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 overflow-hidden border border-gray-200"
          >
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/50 to-transparent skew-x-12"></div>
            <span class="relative">Zurück zur Übersicht</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
