    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-8">
        <div class="accent-line mx-auto mb-4"></div>
        <h2 class="text-2xl md:text-3xl font-black tracking-tight">So läuft das <span class="gradient-text">Coaching</span> ab</h2>
      </div>

      <div class="space-y-4">
        {[
          { num: '01', title: 'Kick-off & Setup', desc: 'Gemeinsamer Start, Tool-Einrichtung, Entwicklungsumgebung' },
          { num: '02', title: 'Wöchentliche Sessions', desc: '6 Monate, 2h/Woche: Agent-Coding, n8n, Webseiten, Hosting' },
          { num: '03', title: 'Hands-on Projekte', desc: 'Eigene Webseiten, KI-Agents, Automatisierungen, Datenbanken' },
          { num: '04', title: 'Multimodale KI', desc: 'Bild- & Videogenerierung, neueste KI-Tools für Alltag & Beruf' },
        ].map((step) => (
          <div class="flex gap-5 items-start p-4 rounded-xl hover:bg-gray-50 transition-colors group">
            <div class="w-12 h-12 bg-gray-900 text-white font-bold flex items-center justify-center flex-shrink-0 rounded-xl group-hover:bg-orange-500 transition-colors">
              {step.num}
            </div>
            <div class="pt-1">
              <h3 class="font-bold text-gray-900">{step.title}</h3>
              <p class="text-sm text-gray-600 mt-0.5">{step.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

