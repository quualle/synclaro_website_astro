---
import MainLayout from '../layouts/MainLayout.astro';

// Recordings data
const recordings = [
  {
    title: 'KI-Grundlagen',
    date: '22.10.2025',
    description: 'Einführung in Künstliche Intelligenz und praktische Anwendungen im Handwerk',
