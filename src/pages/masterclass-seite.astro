---
import MainLayout from '../layouts/MainLayout.astro';

const title = "KI-Masterclass für Führungskräfte | Synclaro";
const description = "Exklusive Masterclass für Geschäftsführer und Entscheider. Lernen Sie, wie Sie KI strategisch in Ihrem Unternehmen einsetzen.";

const modules = [
  {
    title: 'KI-Strategie für Entscheider',
    duration: '2 Stunden',
    topics: ['Marktübersicht', 'Strategische Positionierung', 'Wettbewerbsvorteile']
  },
  {
    title: 'Use Cases identifizieren',
    duration: '2 Stunden',
    topics: ['Potenzialanalyse', 'Priorisierung', 'Quick Wins']
  },
  {
    title: 'Implementierung planen',
    duration: '2 Stunden',
    topics: ['Roadmap erstellen', 'Budget planen', 'Team aufbauen']
  },
  {
    title: 'Change Management',
    duration: '2 Stunden',
    topics: ['Mitarbeiter mitnehmen', 'Widerstände überwinden', 'Kultur entwickeln']
  }
];

const benefits = [
  'Exklusive Kleingruppe (max. 10 Teilnehmer)',
  'Praxisübungen mit echten Unternehmensdaten',
  'Persönliches Feedback',
  'Networking mit anderen Führungskräften',
  'Zugang zu exklusiven Ressourcen',
  'Follow-up Coaching inklusive'
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center">
        <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          MASTERCLASS
        </span>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6">
          KI-Masterclass für <span class="text-swiss-orange">Führungskräfte</span>
        </h1>

        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Ein intensiver Tag für Geschäftsführer und Entscheider, die KI strategisch
          in ihrem Unternehmen einsetzen möchten.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a
            href="https://cal.com/marcoheer/erstgesprach"
            class="px-8 py-4 bg-swiss-orange text-white font-bold border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
          >
            Platz reservieren
          </a>
        </div>

        <div class="flex flex-wrap justify-center gap-6 text-sm">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            8 Stunden intensiv
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
            </svg>
            Max. 10 Teilnehmer
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            Vor Ort oder Online
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Modules Section -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-center mb-12">
        Die <span class="text-swiss-orange">Module</span>
      </h2>

      <div class="grid md:grid-cols-2 gap-6">
        {modules.map((module, idx) => (
          <div class="bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-swiss-orange border-2 border-black flex items-center justify-center text-white font-black shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
                {idx + 1}
              </div>
              <div>
                <h3 class="text-xl font-black">{module.title}</h3>
                <span class="text-sm text-gray-500">{module.duration}</span>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              {module.topics.map((topic) => (
                <span class="px-3 py-1 bg-gray-100 border border-black text-sm">
                  {topic}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-center mb-12">
        Das erwartet <span class="text-swiss-orange">Sie</span>
      </h2>

      <div class="grid md:grid-cols-2 gap-4">
        {benefits.map((benefit) => (
          <div class="flex items-center gap-3 p-4 bg-gray-50 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <svg class="w-6 h-6 text-swiss-orange flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="font-bold">{benefit}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-6 lg:px-12 bg-swiss-orange">
    <div class="container mx-auto max-w-4xl text-center">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-6">
        Sichern Sie Ihren Platz
      </h2>
      <p class="text-xl text-white/90 mb-8">
        Die nächste Masterclass startet bald. Plätze sind begrenzt.
      </p>
      <a
        href="https://cal.com/marcoheer/erstgesprach"
        class="inline-block px-8 py-4 bg-black text-white font-bold border-2 border-black shadow-[4px_4px_0px_0px_rgba(255,255,255,0.3)] hover:shadow-[6px_6px_0px_0px_rgba(255,255,255,0.3)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
      >
        Jetzt Platz reservieren
      </a>
    </div>
  </section>
</MainLayout>
