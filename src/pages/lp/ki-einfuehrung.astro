---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "KI-Einführung für Ihr Unternehmen | Synclaro";
const description = "Starten Sie Ihre KI-Reise mit unserer bewährten Einführungsmethodik. Von der Analyse bis zur Implementierung.";

const benefits = [
  'Strukturierte Herangehensweise',
  'Keine Vorkenntnisse nötig',
  'Schnelle erste Erfolge',
  'Nachhaltige Integration'
];

const steps = [
  { number: '1', title: 'Analyse', description: 'Wir analysieren Ihre Prozesse und identifizieren KI-Potenziale.' },
  { number: '2', title: 'Strategie', description: 'Gemeinsam entwickeln wir Ihre individuelle KI-Roadmap.' },
  { number: '3', title: 'Pilotprojekt', description: 'Wir starten mit einem Quick Win für schnelle Ergebnisse.' },
  { number: '4', title: 'Skalierung', description: 'Erfolgreiche Lösungen werden unternehmensweit ausgerollt.' }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-6 lg:px-12 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-swiss-orange/10 border-2 border-black text-swiss-orange font-mono text-xs uppercase tracking-widest mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] opacity-0 animate-[fade-in-up_0.6s_ease-out_0.1s_forwards]">
            KI-EINFÜHRUNG
          </span>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6 opacity-0 animate-[fade-in-up_0.6s_ease-out_0.2s_forwards]">
            KI erfolgreich <span class="text-swiss-orange">einführen</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8 opacity-0 animate-[fade-in-up_0.6s_ease-out_0.3s_forwards]">
            Der strukturierte Weg zur KI-Integration in Ihrem Unternehmen.
            Von der ersten Analyse bis zum produktiven Einsatz.
          </p>

          <ul class="space-y-3 mb-8">
            {benefits.map((benefit) => (
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-swiss-orange" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="font-medium">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Lead Capture Form -->
        <div class="reveal bg-gray-50 border-2 border-black p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
          <h2 class="text-2xl font-black mb-6">Kostenlose Erstberatung</h2>

          <form action="/danke?source=ki-einfuehrung" method="GET" class="space-y-4">
            <div>
              <label class="block text-sm font-bold mb-2">Name *</label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Name"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">E-Mail *</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="ihre@email.de"
              />
            </div>
            <div>
              <label class="block text-sm font-bold mb-2">Unternehmen</label>
              <input
                type="text"
                name="company"
                class="w-full px-4 py-3 border-2 border-black focus:border-swiss-orange focus:outline-none"
                placeholder="Ihr Unternehmen"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-swiss-orange text-white font-bold py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150"
            >
              Jetzt Beratung anfragen
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Steps Section -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <h2 class="reveal text-3xl sm:text-4xl font-black text-center mb-12">
        Unser <span class="text-swiss-orange">Vorgehen</span>
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {steps.map((step) => (
          <div class="reveal bg-white border-2 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200">
            <div class="w-12 h-12 bg-swiss-orange border-2 border-black flex items-center justify-center text-white font-black text-xl mb-4 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">
              {step.number}
            </div>
            <h3 class="text-xl font-black mb-2">{step.title}</h3>
            <p class="text-gray-600 text-sm">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
