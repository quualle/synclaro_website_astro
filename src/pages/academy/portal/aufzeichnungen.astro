---
import MainLayout from '../../../layouts/MainLayout.astro';

const title = "Aufzeichnungen | Academy Portal";
const description = "Alle Session-Recordings und Video-Materialien.";

const recordings = [
  {
    title: "Mastermind Tag 1: KI-Grundlagen & Strategie",
    date: "10. Dezember 2024",
    duration: "4:32:15",
    thumbnail: "/images/placeholder-video.jpg"
  },
  {
    title: "Mastermind Tag 2: Automatisierung Deep Dive",
    date: "11. Dezember 2024",
    duration: "5:15:42",
    thumbnail: "/images/placeholder-video.jpg"
  },
  {
    title: "Q&A Session: ChatGPT Best Practices",
    date: "5. Dezember 2024",
    duration: "1:45:30",
    thumbnail: "/images/placeholder-video.jpg"
  }
];
---

<MainLayout title={title} description={description}>
  <section class="pt-24 pb-8 px-6 lg:px-12 bg-white border-b-2 border-black">
    <div class="container mx-auto max-w-6xl">
      <div class="flex items-center gap-4 mb-4">
        <a href="/academy/portal" class="text-swiss-orange hover:underline font-bold text-sm">
          ← Zurück zum Dashboard
        </a>
      </div>
      <h1 class="text-3xl font-black">Aufzeichnungen</h1>
      <p class="text-gray-600 mt-2">Alle Session-Recordings zum Nachschauen</p>
    </div>
  </section>

  <section class="py-12 px-6 lg:px-12 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recordings.map((recording) => (
          <div class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all duration-150 overflow-hidden">
            <div class="aspect-video bg-gray-200 relative flex items-center justify-center">
              <div class="w-16 h-16 bg-swiss-orange rounded-full flex items-center justify-center cursor-pointer hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z" />
                </svg>
              </div>
              <span class="absolute bottom-2 right-2 bg-black text-white text-xs px-2 py-1">{recording.duration}</span>
            </div>
            <div class="p-4">
              <h3 class="font-bold mb-2">{recording.title}</h3>
              <p class="text-sm text-gray-500">{recording.date}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
